           <span class="text-xs ">Flat No</span>
           <span class="text-base font-semibold mb-1">T1-101</span>

       </div>
        <!-- Dialog for Flat Booked details -->
        <%= render_dialog do %>
            <%= dialog_trigger do %>
                <span class="text-gray-500 cursor-pointer"><%= render 'icons/arrowRight' %></span>
            <% end %>
            <%= dialog_content do %>
            <span class="flat-blocked !rounded-full mb-4 block  max-w-[100px]">
                <span class="unitplan  p-2 !rounded-full block text-center max-w-[100px] text-xs">Booked</span>
            </span>
                <div class="rounded-lg  p-4 shadow-xl bg-white">
                    <div class="flex flex-col space-y-1.5  pb-4 border-b border-gray-200 mb-4">
                        <h3 class="font-semibold leading-none tracking-tight">Falt : T1-101</h3>
                        <h3 class="font-semibold leading-none tracking-tight text-sm">Booked by : Jitendra Patel</h3>
                    </div>
                    <div class=" pt-0 grid gap-1 grid-cols-2">
                        <div class="-mx-2 flex items-center space-x-4 rounded-md p-2 transition-all ">
                            <div class="text-gray-800 opacity-70"><%= render 'icons/carpet' %></div>
                            <div class="space-y-1">
                                <p class="text-sm font-medium leading-none">828 sq.ft.</p>
                                <p class="text-sm text-muted-foreground">Carpet area</p>
                            </div>
                        </div>
                        <div class="-mx-2 flex items-center space-x-4 rounded-md p-2 transition-all ">
                            <div class="text-gray-800 opacity-70"><%= render 'icons/level' %></div>
                            <div class="space-y-1">
                                <p class="text-sm font-medium leading-none">1st</p>
                                <p class="text-sm text-muted-foreground">Floor</p>
                            </div>
                        </div>
                        <div class="-mx-2 flex items-center space-x-4 rounded-md p-2 transition-all">
                            <div class="text-gray-800 opacity-70"><%= render 'icons/unit' %></div>
                            <div class="space-y-1">
                                <p class="text-sm font-medium leading-none uppercase">3 BHK</p>
                                <p class="text-sm text-muted-foreground">Configuration</p>
                            </div>
                        </div>
                        <div class="-mx-2 flex items-center space-x-4 rounded-md p-2 transition-all">
                            <div class="text-gray-800 opacity-70"><%= render 'icons/facing' %></div>
                            <div class="space-y-1">
                                <p class="text-sm font-medium leading-none ">East</p>
                                <p class="text-sm text-muted-foreground">Facing</p>
                            </div>
                        </div>
                        <div class="-mx-2 flex items-center space-x-4 rounded-md p-2 transition-all">
                            <div class="text-gray-800 opacity-70"><%= render 'icons/rupee' %></div>
                            <div class="space-y-1">
                                <p class="text-sm font-medium leading-none uppercase">&#8377; 45,000</p>
                                <p class="text-sm text-muted-foreground">Cost</p>
                            </div>
                        </div>
                    </div>
                    <div class=" border-t border-gray-200 pt-4">
                            <%= render_button "Book Now", as: :link, href: "/", class:"w-full bg-brand hover:bg-brand/80" %>

                        </div>
                </div>
                 <div class="flex gap-4 justify-between mt-8">
                    <div class="w-1/3">
                        <%= render_button as: :link, href: "", class: "w-full bg-blue-500 h-auto px-2  text-white border border-gray-200 gap-2  hover:bg-blue-700 hover:text-white text-xs items-center " do %>
                            <%= render 'icons/edit' %>
                            <div class="flex flex-col">
                                <span class="text-white text-sm">Edit</span>
                                <span class="text-white/90">Flat Details</span>
                            </div>
                            
                        <% end %>
                    </div>
                    <div class="w-1/3">
                        <%= render_button as: :link, href: "", class: " w-full bg-lime-600 text-white h-auto px-2 border border-lime-200 gap-2  hover:bg-lime-700 hover:text-white text-xs items-center " do %>
                            <%= render 'icons/payment' %>
                            <div class="flex flex-col">
                                <span class="text-sm">Record</span>
                                <span class="text-white/90">Transaction</span>
                            </div>
                        <% end %>
                    </div>
                    <div class="w-1/3">
                        <%= render_button as: :link, href: "", class: " w-full bg-red-500 text-white h-auto px-2 border border-red-200 gap-2  hover:bg-red-600 hover:text-white text-xs items-center " do %>
                            <%= render 'icons/delete' %>
                            <div class="flex flex-col">
                                <span class="text-sm">Cancel</span>
                                <span class="text-white/90 ">Booking</span>
                            </div>
                        <% end %>
                    </div>
                </div>
            <% end %>
        <% end %>

   </div>
    <div class="flex justify-center  items-center  rounded-b-lg overflow-hidden font-semibold">
        <div class="w-1/3 flex  items-center justify-center text-white text-xs cursor-pointer py-1 border-r bg-action">
            
            <span class="block">Edit</span>
        </div>
        <div class="w-1/3 flex  items-center justify-center text-white text-xs cursor-pointer py-1 border-r bg-action">
            <span class="block">Cancel Booking</span>
        </div>
        <div class="w-1/3 flex  items-center justify-center text-white text-xs cursor-pointer py-1 bg-action">
            <span class="block">Transaction</span>
        </div>
    </div>
   </div>