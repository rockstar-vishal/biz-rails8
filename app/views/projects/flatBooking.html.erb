<div>
  <div class="mt-1 mb-4 flex  items-center w-full">
        <span class="w-1/3 "><a href="/building"
                class=" inline-flex  justify-between items-center p-2 text-xs border border-gray-200 rounded-lg rounded-lg bg-white hover:shadow-md transition-all">
                <div class="flex items-center gap-1">
                    <span class="text-gray-800 "><%= render 'icons/back' %></span>
                    <div class="flex flex-col">
                        <span class="text-gray-500">Back</span>

                    </div>
                </div>
            </a></span>

        <span class="w-1/3 text-black text-base font-semibold flex justify-center">Flat Booking</span>
        <span class="w-1/3 flex justify-end">
            <%= render 'shared/breadcrumb' %>
        </span>
    </div>
  <div class="flex gap-4 ">
    <div class=" backdrop-blur-xl project-height-fix w-[400px]  relative">
      <div class="bg-gradient-to-tr from-[#22c55e] via-[#0e7490] to-[#3b82f6] relative overflow-hidden rounded-lg sticky top-0 z-10 bg-red-500">
        <div class="w-full absolute top-5 right-0  flex items-end h-full">
          <%= image_tag 'card-project2.png', alt: 'Company Logo', class: 'w-full  opacity-30  ' %>
        </div>
        
        <div class="border-t border-white/50 p-4 relative z-10">
          <div class="space-y-2 ">
            <div class="flex flex-col border-b border-white/50 pb-2">
                <span class="text-xs text-white">Flat No</span>
                <h3 class="text-white text-sm font-bold">T1-101</h3>
            </div>
            <div class="flex flex-col border-b border-white/50 pb-2">
                <span class="text-xs text-white">Floor No</span>
                <h3 class="text-white text-sm font-bold">1st</h3>
            </div>
             <div class="flex flex-col border-b border-white/50 pb-2">
                <span class="text-xs text-white">Building Name</span>
                <h3 class="text-white text-sm font-bold">Tower 1</h3>
            </div>
            <div class="flex flex-col">
                <span class="text-xs text-white">Project Name</span>
                <h3 class="text-white text-sm font-bold">Global Inspira</h3>
            </div>
           
      
          </div>
        </div>
      </div>
      
    </div>
    <div class="w-full space-y-4 project-height-fix ">
        <%= render 'projects/flat/view/flatDetail' %>
        <%= render 'projects/flat/view/flatCost' %>
        <%= render 'projects/flat/view/flatBooking' %>
        <%= render 'projects/flat/view/paymentplan' %>
        
        <%= render_button "Book ", as: :link, href: "/", class:"w-full bg-brand hover:bg-brand/80 h-auto p-3 max-w-[200px] text-base" %>
        <div class="m-4"></div>
    </div>
    
</div>
</div>
