<div class="bg-white p-4 rounded-lg border bg-gradient-to-r from-white via-brand/10 to-brand/50 backdrop-blur-sm relative  overflow-hidden hover:bg-brand  hover:shadow-2xl transition-all duration-300 ease-in-out">
          <div class="w-full absolute top-2 right-0 ">
            <%= image_tag 'card-project2.png', alt: 'Company Logo', class: ' max-h-[150px] ml-auto opacity-60  ' %>
          </div>
          <div class="relative z-10">
            <div class="flex justify-between items-center z-10">
              <div>
                <h2 class="text-sm font-bold">Project Name</h2>
                <span class="text-xs">
                  Buildings/Tower
                  <span class="bg-brand text-white p-1 px-2 rounded-sm">2</span>
                </span>
              </div>
              <button  class="text-xs h-auto py-1 px-3 text-white bg-brand/80 rounded-lg border border-gray-200"
                type="button"
                data-state="closed"
                data-controller="ui--sheet"
                data-action="click->ui--sheet#toggleOutlet"
                data--ui-sheet-outlet="#edit_project">
                  Edit
              </button>

            </div>
            <div class="flex  items-center mt-2 pt-2 gap-2 z-10">
              <%= render_button "Overview", as: :link, href: "/dashboard", class: " h-auto shadow-3xl text-xs bg-white border hover:bg-brand text-brand hover:text-white " %>
              <%= render_button "Workflow", as: :link, href: "/project", class: " h-auto shadow-3xl text-xs bg-white border hover:bg-brand text-brand hover:text-white" %>
              <%= render_button "Inventory", as: :link, href: "/inventory", class: " h-auto shadow-3xl text-xs bg-white border hover:bg-brand text-brand hover:text-white" %>
            </div>
          </div>
        </div>