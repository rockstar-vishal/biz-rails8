<div id="flash" class="fixed top-4 right-4 z-[1000]">
  <% flash.each do |type, message| %>
    <div class="flash-message px-6 py-4 mb-2 rounded-md shadow-lg
                <%= type == 'notice' ? 'bg-blue-600' : 'bg-red-500' %>
                text-white text-sm font-medium flex items-center justify-between
                animate-fade-in">
      <span><%= message.is_a?(Array) ? message.join(', ') : message %></span>
      <button onclick="this.closest('.flash-message').remove()" 
              class="ml-4 text-xl font-bold hover:text-gray-200 focus:outline-none">
        &times;
      </button>
    </div>
  <% end %>
</div>
