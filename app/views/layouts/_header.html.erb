<header class=" border-b border-gray-200 fixed top-0 left-0 z-10 w-full">
    <div class="mx-auto px-4   bg-white z-10 bg-white/80 backdrop-blur-lg">
        <div class="flex  h-16 items-center justify-between">
            <div class="flex items-center gap-4 md:flex md:items-center ">
                  <div id="expandMenu" class="w-[50px] flex justify-center">
                    <span id="toggleButton" onclick="toggleIcon()" class="cursor-pointer ">
                        <svg id="icon1" class="size-6 rotate-0 "  xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 17h14M5 12h14M5 7h8"/></svg>
                           <svg id="icon2" class="size-6 rotate-180 hidden "  xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 17h14M5 12h14M5 7h8"/></svg>
                      
                    </span>
                </div>
                <div class="w-48 ">
                    <%= image_tag 'sample-logo.png', alt: 'Company Logo', class: 'max-w-40 max-h-12 w-auto' %>
                </div>
                
               
            </div>

            <div class="flex items-center gap-2">

                <%= render_dropdown_menu do %>
                    <%= dropdown_menu_trigger do %>
                        <button type="button" class=" flex items-center gap-2">
                            <span class="sr-only">Toggle dashboard menu</span>
                            <svg class="size-10 p-2 text-brand bg-brand/10 rounded-full" xmlns="http://www.w3.org/2000/svg" width="448" height="512" viewBox="0 0 448 512"><path fill="currentColor" d="M224 256c70.7 0 128-57.3 128-128S294.7 0 224 0S96 57.3 96 128s57.3 128 128 128m95.8 32.6L272 480l-32-136l32-56h-96l32 56l-32 136l-47.8-191.4C56.9 292 0 350.3 0 422.4V464c0 26.5 21.5 48 48 48h352c26.5 0 48-21.5 48-48v-41.6c0-72.1-56.9-130.4-128.2-133.8"/></svg>
                              <div class="flex flex-col items-start ">
                                <span class="block text-sm">JItendra Patel </span>
                                <span class="text-gray-500 text-xs !text-brand block">Super Admin</span>
                            </div>
                        </button>
                    <% end %>
                    <%= dropdown_menu_content do %>
                        
                        <%= dropdown_menu_item  do %>
                            <div class="flex gap-2 items-center text-gray-500 hover:text-brand cursor-pointer">
                                <%= link_to dashboard_path, class: "flex gap-2 items-center text-gray-500 hover:text-brand cursor-pointer" do %>
                                    <svg class="size-5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="currentColor" d="M19.9 12.66a1 1 0 0 1 0-1.32l1.28-1.44a1 1 0 0 0 .12-1.17l-2-3.46a1 1 0 0 0-1.07-.48l-1.88.38a1 1 0 0 1-1.15-.66l-.61-1.83a1 1 0 0 0-.95-.68h-4a1 1 0 0 0-1 .68l-.56 1.83a1 1 0 0 1-1.15.66L5 4.79a1 1 0 0 0-1 .48L2 8.73a1 1 0 0 0 .1 1.17l1.27 1.44a1 1 0 0 1 0 1.32L2.1 14.1a1 1 0 0 0-.1 1.17l2 3.46a1 1 0 0 0 1.07.48l1.88-.38a1 1 0 0 1 1.15.66l.61 1.83a1 1 0 0 0 1 .68h4a1 1 0 0 0 .95-.68l.61-1.83a1 1 0 0 1 1.15-.66l1.88.38a1 1 0 0 0 1.07-.48l2-3.46a1 1 0 0 0-.12-1.17ZM18.41 14l.8.9l-1.28 2.22l-1.18-.24a3 3 0 0 0-3.45 2L12.92 20h-2.56L10 18.86a3 3 0 0 0-3.45-2l-1.18.24l-1.3-2.21l.8-.9a3 3 0 0 0 0-4l-.8-.9l1.28-2.2l1.18.24a3 3 0 0 0 3.45-2L10.36 4h2.56l.38 1.14a3 3 0 0 0 3.45 2l1.18-.24l1.28 2.22l-.8.9a3 3 0 0 0 0 3.98m-6.77-6a4 4 0 1 0 4 4a4 4 0 0 0-4-4m0 6a2 2 0 1 1 2-2a2 2 0 0 1-2 2"/></svg>
                                    <span>Profile</span>
                                <% end %>
                            </div>
                        <% end %>
                        <%= dropdown_menu_item  do %>
                          <%= link_to dashboard_path, data: { "turbo-method": :delete }, class: "flex gap-2 items-center text-gray-500 hover:text-brand cursor-pointer" do %>
                            <svg class="size-5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="currentColor" fill-rule="evenodd" d="M6 2a3 3 0 0 0-3 3v14a3 3 0 0 0 3 3h6a3 3 0 0 0 3-3V5a3 3 0 0 0-3-3zm10.293 5.293a1 1 0 0 1 1.414 0l4 4a1 1 0 0 1 0 1.414l-4 4a1 1 0 0 1-1.414-1.414L18.586 13H10a1 1 0 1 1 0-2h8.586l-2.293-2.293a1 1 0 0 1 0-1.414" clip-rule="evenodd"/></svg>
                            <span>Logout</span>
                          <% end %>
                        <% end %>
                    <% end %>
                <% end %>
            </div>
        </div>
    </div>
</header>