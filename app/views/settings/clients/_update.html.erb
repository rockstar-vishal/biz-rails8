<%= render_sheet direction: "right", width: "w-full sm:max-w-full lg:max-w-full  md:w-3/5 lg:w-3/5 xl:w-1/2 ",  class:"!slide-in-from-right bg-white/50 backdrop-blur-xl p-0" do %>
  <%= sheet_trigger do %>
    <span class="inline-flex items-center  bg-blue-500 hover:bg-blue-800 text-white text-xs py-1 px-2 rounded-md cursor-pointer mr-2"><%= render 'icons/update' %> </span>	
  <% end %>

  <%= sheet_content do %>
  <div class="">
    <div class="p-4 flex items-center justify-between">
      <h3 class="text-base font-semibold">Edit Client</h3>
    </div>
    <form action="">
      <div class="modal-height p-4">
        <div class="grid grid-cols-1 sm:grid-cols-1 lg:grid-cols-2 gap-4">
        <div class="col-span-full flex items-center justify-between">
            <h3 class="text-base font-semibold">Contact Details</h3>
          </div>
          <div class="mb-4">
            <%= render_label name:"", label:"Name", class:"mb-2 block" %>
            <%= render_input name: "", id: "", placeholder:"Name", class:"h-auto p-3 " %>
          </div>
               <div class="mb-4">
            <%= render_label name:"", label:"Mobile", class:"mb-2 block" %>
            <%= render_input name: "", id: "", placeholder:"Mobile", class:"h-auto p-3 " %>
          </div>
            <div class="mb-4">
            <%= render_label name:"", label:"Email", class:"mb-2 block" %>
            <%= render_input name: "", id: "", placeholder:"email", class:"h-auto p-3 " %>
          </div>
           <div class="mb-4">
            <%= render_label name:"", label:"Photo", class:"mb-2 block" %>
            <%= render_input name: "", type: "file", placeholder:"", class:"h-auto pt-3 pb-2.5 " %>
          </div>
          <div class="mb-4 col-span-full">
            <%= render_label name:"", label:"Address", class:"mb-2 block" %>
            <%= render_textarea name: "", placeholder:"Address..." %>
          </div>
           <div class="col-span-full flex items-center justify-between">
            <h3 class="text-base font-semibold">Lead Details</h3>
          </div>
              <div class="mb-4">
            <%= render_label name:"", label:"Lead No", class:"mb-2 block" %>
            <%= render_input name: "", id: "", placeholder:"Lead No", class:"h-auto p-3 " %>
          </div>
            <div class="mb-4">
            <%= render_label name:"", label:"Correspondent", class:"mb-2 block" %>
            <%= render_input name: "", id: "", placeholder:"Correspondent", class:"h-auto p-3 " %>
          </div>
          <div class="col-span-full flex items-center justify-between">
            <h3 class="text-base font-semibold">Registration Details</h3>
          </div>
          <div class="mb-4">
            <%= render_label name:"", label:"PAN Card No", class:"mb-2 block" %>
            <%= render_input name: "", id: "", placeholder:"PAN Card", class:"h-auto p-3 " %>
          </div>
          <div class="mb-4">
            <%= render_label name:"", label:"Aadhar No", class:"mb-2 block" %>
            <%= render_input name: "", id: "", placeholder:"Aadhar No", class:"h-auto p-3 " %>
          </div>
           <div class="mb-4">
            <%= render_label name:"", label:"Company", class:"mb-2 block" %>
            <%= render_input name: "", id: "", placeholder:"Company", class:"h-auto p-3 " %>
          </div>
          <div class="mb-4">
            <%= render_label name:"", label:"Designation", class:"mb-2 block" %>
            <%= render_input name: "", id: "", placeholder:"Designation", class:"h-auto p-3 " %>
          </div>
     
          <div class="col-span-full flex items-center justify-between">
            <h3 class="text-base font-semibold">Other details</h3>
          </div>
           <div class="mb-4">
            <%= render_label name:"", label:"Password", class:"mb-2 block" %>
            <%= render_input name: "", type: "password", placeholder:"Password", class:"h-auto p-3 " %>
          </div>
          <div class="mb-4">
            <%= render_label name:"", label:"Anniversary", class:"mb-2 block" %>
            <%= render_input name: "", type: "date", placeholder:"", class:"w-auto h-auto p-3 " %>
          </div>
          
       <div class="col-span-full flex items-center justify-between">
              <h3 class="text-base font-semibold">Attach Documents</h3>
            </div>
            <div class="col-span-full flex gap-2 items-stretch w-full bg-white rounded-lg border border-gray-200">
              <div class="w-full grid grid-cols-1 sm:grid-cols-1 lg:grid-cols-2  gap-4 p-4">
               <div class="mb-2">
                  <%= render_label name: "", label: "Title", class: "mb-2 block" %>
                  <%= render_input name: "", id: "", placeholder: "Title", class: "h-auto p-3" %>
                </div>
                <div class="mb-2">
                  <%= render_label name: "", label: "Attachment", class: "mb-2 block" %>
                  <%= render_input name: "", type: "file", placeholder: "", class: "h-auto pt-3 py-2.5" %>
                </div>
              </div>
              <div class="w-full max-w-[200px] flex items-center gap-2 bg-green-50 p-2 rounded-e-lg justify-center">
                <%= render_button as: :link, href: "", class: "w-auto bg-brand h-auto py-3 mt-2 gap-2" do %>
                  <%= render 'icons/add' %>
                  <span>Add</span>
                <% end %>
                <%= render_button as: :link, href: "", class: "w-auto bg-red-500 h-auto py-2 mt-2 gap-2" do %>
                  <%= render 'icons/delete' %>
                <% end %>
              </div>
            </div>
  
          
          
          
        </div>
      
           
      </div>
      <div class="bg-white border-t border-gray-300 p-4">
        <div class="flex justify-between items-center">
          <%= render_button "Save", as: :link, href: "", class: "bg-brand h-auto " %>
          <button data-ui--sheet-target="closeButton" type="button"
            class="bg-gray-200 text-gray-800 hover:bg-gray-300 h-auto rounded-md text-sm py-2 px-4">Close
          </button>
        </div>
      </div>
    </form>
  </div>
  <% end %>
<% end %>