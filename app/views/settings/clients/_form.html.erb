<% client ||= @client %>
<%= form_with model: [:settings, client], data: { turbo: true }, local: true do |form| %>
  <% if client.errors.any? %>
    <div class="rounded-md bg-red-50 p-4 border border-red-200">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside space-y-1">
              <% client.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  
  <div class="">
    <div class="p-4 flex items-center justify-between">
      <h3 class="text-base font-semibold"><%= (client || @client).new_record? ? 'Add Client' : 'Edit Client' %></h3>
    </div>
    
    <div class="modal-height p-4">
      <div class="grid grid-cols-1 sm:grid-cols-1 lg:grid-cols-2 gap-4">
        
        <!-- Contact Details Section -->
        <div class="col-span-full flex items-center justify-between">
          <h3 class="text-base font-semibold">Contact Details</h3>
        </div>
        
        <div class="mb-4">
          <%= form.label :name, "Name", class: "mb-2 block text-sm font-medium text-gray-700" %>
          <%= form.text_field :name, class: "w-full rounded border-gray-300 p-3 text-sm focus:border-brand focus:ring-brand focus:ring-2 focus:ring-opacity-50 focus:outline-none", required: true %>
        </div>
        
        <div class="mb-4">
          <%= form.label :phone, "Mobile", class: "mb-2 block text-sm font-medium text-gray-700" %>
          <%= form.text_field :phone, class: "w-full rounded border-gray-300 p-3 text-sm focus:border-brand focus:ring-brand focus:ring-2 focus:ring-opacity-50 focus:outline-none" %>
        </div>
        
        <div class="mb-4">
          <%= form.label :email, "Email", class: "mb-2 block text-sm font-medium text-gray-700" %>
          <%= form.email_field :email, class: "w-full rounded border-gray-300 p-3 text-sm focus:border-brand focus:ring-brand focus:ring-2 focus:ring-opacity-50 focus:outline-none" %>
        </div>
        
        <div class="mb-4">
          <%= form.label :photo, "Photo", class: "mb-2 block text-sm font-medium text-gray-700" %>
          <%= form.file_field :photo, accept: "image/*", class: "w-full rounded border-gray-300 pt-3 py-2.5 text-sm focus:border-brand focus:ring-brand focus:ring-2 focus:ring-opacity-50 focus:outline-none" %>
          <% if client.persisted? && client.photo.attached? %>
            <div class="mt-2 p-2 bg-gray-50 rounded flex items-center justify-between" id="photo_attachment">
              <div class="flex items-center">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <span class="text-sm text-gray-600"><%= client.photo.filename %></span>
              </div>
              <div class="flex items-center space-x-2">
                <%= link_to rails_blob_path(client.photo, disposition: "inline"), target: "_blank", class: "text-blue-600 hover:text-blue-800 text-sm" do %>
                  View
                <% end %>
                <%= link_to destroy_attachment_settings_client_path(client, "photo"), 
                    method: :delete, 
                    data: { turbo_method: :delete, confirm: "Remove photo?" },
                    class: "text-red-600 hover:text-red-800 text-sm" do %>
                  Remove
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
        
        <div class="mb-4">
          <%= form.label :company_id, "Select Company", class: "mb-2 block text-sm font-medium text-gray-700" %>
          <%= form.select :company_id, options_from_collection_for_select(@companies, :id, :name, client.company_id), 
              { include_blank: "Please select" }, 
              { class: "w-full rounded border-gray-300 p-3 text-sm focus:border-brand focus:ring-brand focus:ring-2 focus:ring-opacity-50 focus:outline-none", required: true } %>
        </div>
        
        <!-- Lead Details Section -->
        <div class="col-span-full flex items-center justify-between">
          <h3 class="text-base font-semibold">Lead Details</h3>
        </div>
        
        <div class="mb-4">
          <%= form.label :leadquest_code, "Leadquest Code", class: "mb-2 block text-sm font-medium text-gray-700" %>
          <%= form.text_field :leadquest_code, class: "w-full rounded border-gray-300 p-3 text-sm focus:border-brand focus:ring-brand focus:ring-2 focus:ring-opacity-50 focus:outline-none" %>
        </div>
        
        <!-- Registration Details Section -->
        <div class="col-span-full flex items-center justify-between">
          <h3 class="text-base font-semibold">Registration Details</h3>
        </div>

        <div class="mb-4">
          <%= form.label :job_company, "Company", class: "mb-2 block text-sm font-medium text-gray-700" %>
          <%= form.text_field :job_company, class: "w-full rounded border-gray-300 p-3 text-sm focus:border-brand focus:ring-brand focus:ring-2 focus:ring-opacity-50 focus:outline-none" %>
        </div>
        
        <div class="mb-4">
          <%= form.label :job_designation, "Designation", class: "mb-2 block text-sm font-medium text-gray-700" %>
          <%= form.text_field :job_designation, class: "w-full rounded border-gray-300 p-3 text-sm focus:border-brand focus:ring-brand focus:ring-2 focus:ring-opacity-50 focus:outline-none" %>
        </div>
        
        <div class="mb-4">
          <%= form.label :pan, "PAN Card No", class: "mb-2 block text-sm font-medium text-gray-700" %>
          <%= form.text_field :pan, class: "w-full rounded border-gray-300 p-3 text-sm focus:border-brand focus:ring-brand focus:ring-2 focus:ring-opacity-50 focus:outline-none" %>
        </div>
        
        <div class="mb-4">
          <%= form.label :pan_scan, "PAN Card Scan", class: "mb-2 block text-sm font-medium text-gray-700" %>
          <%= form.file_field :pan_scan, accept: "image/*,.pdf", class: "w-full rounded border-gray-300 pt-3 py-2.5 text-sm focus:border-brand focus:ring-brand focus:ring-2 focus:ring-opacity-50 focus:outline-none" %>
          <% if client.persisted? && client.pan_scan.attached? %>
            <div class="mt-2 p-2 bg-gray-50 rounded flex items-center justify-between" id="pan_scan_attachment">
              <div class="flex items-center">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <span class="text-sm text-gray-600"><%= client.pan_scan.filename %></span>
              </div>
              <div class="flex items-center space-x-2">
                <%= link_to rails_blob_path(client.pan_scan, disposition: "inline"), target: "_blank", class: "text-blue-600 hover:text-blue-800 text-sm" do %>
                  View
                <% end %>
                <%= link_to destroy_attachment_settings_client_path(client, "pan_scan"), 
                    method: :delete, 
                    data: { turbo_method: :delete, confirm: "Remove PAN scan?" },
                    class: "text-red-600 hover:text-red-800 text-sm" do %>
                  Remove
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
        
        <div class="mb-4">
          <%= form.label :aadhar, "Aadhar No", class: "mb-2 block text-sm font-medium text-gray-700" %>
          <%= form.text_field :aadhar, class: "w-full rounded border-gray-300 p-3 text-sm focus:border-brand focus:ring-brand focus:ring-2 focus:ring-opacity-50 focus:outline-none" %>
        </div>
        
        <div class="mb-4">
          <%= form.label :aadhar_scan, "Aadhar Scan", class: "mb-2 block text-sm font-medium text-gray-700" %>
          <%= form.file_field :aadhar_scan, accept: "image/*,.pdf", class: "w-full rounded border-gray-300 pt-3 py-2.5 text-sm focus:border-brand focus:ring-brand focus:ring-2 focus:ring-opacity-50 focus:outline-none" %>
          <% if client.persisted? && client.aadhar_scan.attached? %>
            <div class="mt-2 p-2 bg-gray-50 rounded flex items-center justify-between" id="aadhar_scan_attachment">
              <div class="flex items-center">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <span class="text-sm text-gray-600"><%= client.aadhar_scan.filename %></span>
              </div>
              <div class="flex items-center space-x-2">
                <%= link_to rails_blob_path(client.aadhar_scan, disposition: "inline"), target: "_blank", class: "text-blue-600 hover:text-blue-800 text-sm" do %>
                  View
                <% end %>
                <%= link_to destroy_attachment_settings_client_path(client, "aadhar_scan"), 
                    method: :delete, 
                    data: { turbo_method: :delete, confirm: "Remove Aadhar scan?" },
                    class: "text-red-600 hover:text-red-800 text-sm" do %>
                  Remove
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
        
        <!-- Other Details Section -->
        <div class="col-span-full flex items-center justify-between">
          <h3 class="text-base font-semibold">Other Details</h3>
        </div>
        
        <div class="mb-4">
          <%= form.label :dob, "Date of Birth", class: "mb-2 block text-sm font-medium text-gray-700" %>
          <%= form.date_field :dob, class: "w-full rounded border-gray-300 p-3 text-sm focus:border-brand focus:ring-brand focus:ring-2 focus:ring-opacity-50 focus:outline-none" %>
        </div>
        
        <div class="mb-4 flex items-center">
          <%= form.check_box :is_nri, class: "rounded border-gray-300 text-brand focus:ring-brand focus:ring-2 focus:ring-opacity-50" %>
          <%= form.label :is_nri, "Is NRI", class: "ml-2 text-sm font-medium text-gray-700" %>
        </div>
        
      </div>
    </div>
    
    <div class="bg-white border-t border-gray-300 p-4">
      <div class="flex justify-between items-center">
        <%= form.submit (client || @client).new_record? ? 'Create Client' : 'Update Client', 
              class: "bg-brand text-white hover:bg-brand/80 h-auto rounded-md text-sm py-2 px-4 cursor-pointer" %>
        <button type="button" data-ui--sheet-target="closeButton"
          class="bg-gray-200 text-gray-800 hover:bg-gray-300 h-auto rounded-md text-sm py-2 px-4">
          Close
        </button>
      </div>
    </div>
  </div>
<% end %>
