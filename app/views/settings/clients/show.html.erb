<div class="relative bg-white border-b border-gray-200 shadow-sm">
  <div class="absolute inset-0 bg-gradient-to-r from-brand/5 to-blue-50"></div>
    <div class="relative p-6">
      <div class="flex items-center justify-between mb-4">
        <%= link_to settings_clients_path, class: "inline-flex items-center px-4 py-2 text-sm border border-gray-200 rounded-lg bg-white hover:shadow-md transition-all" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Back to Clients
        <% end %>
        
        <div class="flex items-center gap-3">
          <%= render partial: 'layouts/edit_delete_actions',
             locals: { 
               object: @client,
               object_class: 'Client',
               form_partial: 'settings/clients/form',
               delete_path: settings_client_path(@client)
             } %>
        </div>
      </div>
      
      <div class="flex items-center gap-6">
        <div class="w-20 h-20 bg-gradient-to-br from-brand to-blue-600 rounded-2xl flex items-center justify-center shadow-lg">
          <span class="text-2xl font-bold text-white">
            <%= @client.name.present? ? @client.name.split.map(&:first).join.upcase : 'C' %>
          </span>
        </div>
        
        <div class="flex-1">
          <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @client.name || 'Unnamed Client' %></h1>
          <div class="flex flex-wrap items-center gap-4 text-sm text-gray-600">
            <% if @client.email.present? %>
              <div class="flex items-center gap-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                <%= @client.email %>
              </div>
            <% end %>
            
            <% if @client.phone.present? %>
              <div class="flex items-center gap-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                <%= @client.phone %>
              </div>
            <% end %>
            
            <% if @client.company.present? %>
              <div class="flex items-center gap-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-4m-5 0H3m2 0h4M9 7h6m-6 4h6m-2 4h2M7 7h.01M7 11h.01M7 15h.01"></path>
                </svg>
                <%= @client.company.name %>
              </div>
            <% end %>
            
            <% if @client.is_nri? %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-orange-100 text-orange-800">
                NRI
              </span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="p-6">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <div class="lg:col-span-2 space-y-6">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
          <div class="bg-gradient-to-r from-blue-50 to-indigo-50 px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900 flex items-center">
              <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
              Contact Information
            </h3>
          </div>
          <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div class="space-y-4">
                <div>
                  <label class="block text-sm font-medium text-gray-500 mb-1">Full Name</label>
                  <p class="text-gray-900 font-medium"><%= @client.name || 'Not specified' %></p>
                </div>
                
                <div>
                  <label class="block text-sm font-medium text-gray-500 mb-1">Email Address</label>
                  <p class="text-gray-900">
                    <% if @client.email.present? %>
                      <%= mail_to @client.email, @client.email, class: "text-blue-600 hover:text-blue-800" %>
                    <% else %>
                      Not specified
                    <% end %>
                  </p>
                </div>
                
                <div>
                  <label class="block text-sm font-medium text-gray-500 mb-1">Phone Number</label>
                  <p class="text-gray-900">
                    <% if @client.phone.present? %>
                      <%= link_to "tel:#{@client.phone}", class: "text-blue-600 hover:text-blue-800" do %>
                        <%= @client.phone %>
                      <% end %>
                    <% else %>
                      Not specified
                    <% end %>
                  </p>
                </div>
              </div>
              
              <div class="space-y-4">
                <div>
                  <label class="block text-sm font-medium text-gray-500 mb-1">Date of Birth</label>
                  <p class="text-gray-900">
                    <%= @client.dob.present? ? @client.dob.strftime("%B %d, %Y") : 'Not specified' %>
                  </p>
                </div>
                
                <div>
                  <label class="block text-sm font-medium text-gray-500 mb-1">Client Type</label>
                  <div class="flex items-center gap-2">
                    <% if @client.is_nri? %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-orange-100 text-orange-800">
                        NRI Client
                      </span>
                    <% else %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        Domestic Client
                      </span>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
          <div class="bg-gradient-to-r from-green-50 to-emerald-50 px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900 flex items-center">
              <svg class="w-5 h-5 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m8 6V8a2 2 0 00-2-2H6a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2z"></path>
              </svg>
              Professional Information
            </h3>
          </div>
          <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label class="block text-sm font-medium text-gray-500 mb-1">Current Company</label>
                <p class="text-gray-900 font-medium"><%= @client.job_company || 'Not specified' %></p>
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-500 mb-1">Designation</label>
                <p class="text-gray-900"><%= @client.job_designation || 'Not specified' %></p>
              </div>
            </div>
          </div>
        </div>
        
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
          <div class="bg-gradient-to-r from-purple-50 to-pink-50 px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900 flex items-center">
              <svg class="w-5 h-5 mr-2 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
              Identity Documents
            </h3>
          </div>
          <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label class="block text-sm font-medium text-gray-500 mb-1">PAN Card</label>
                <p class="text-gray-900 font-mono">
                  <%= @client.pan.present? ? @client.pan.upcase : 'Not specified' %>
                </p>
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-500 mb-1">Aadhar Number</label>
                <p class="text-gray-900 font-mono">
                  <% if @client.aadhar.present? %>
                    <%= @client.aadhar.gsub(/(\d{4})(\d{4})(\d{4})/, '\1 \2 \3') %>
                  <% else %>
                    Not specified
                  <% end %>
                </p>
              </div>
            </div>
          </div>
        </div>

        <% 
          attachments = []
          attachments << { name: 'Profile Photo', attachment: @client.photo, type: 'photo', icon: 'image' } if @client.photo.attached?
          attachments << { name: 'PAN Card', attachment: @client.pan_scan, type: 'pan_scan', icon: 'document' } if @client.pan_scan.attached?
          attachments << { name: 'Aadhar Card', attachment: @client.aadhar_scan, type: 'aadhar_scan', icon: 'document' } if @client.aadhar_scan.attached?
        %>

        <% if attachments.any? %>
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden" 
               data-controller="document-manager">
            <div class="bg-gradient-to-r from-amber-50 to-orange-50 px-6 py-4 border-b border-gray-200 flex items-center justify-between">
              <h3 class="text-lg font-semibold text-gray-900 flex items-center">
                <svg class="w-5 h-5 mr-2 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13"></path>
                </svg>
                Document Attachments
                <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-amber-100 text-amber-800">
                  <%= pluralize(attachments.count, 'file') %>
                </span>
              </h3>
            </div>
            
            <div class="p-6">
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                <% attachments.each do |doc| %>
                  <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow group relative" data-document-manager-target="documentCard">
                    <div class="absolute -top-2 -right-2">
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium 
                        <%= doc[:type] == 'photo' ? 'bg-blue-100 text-blue-800' : 'bg-purple-100 text-purple-800' %>">
                        <%= doc[:type].humanize %>
                      </span>
                    </div>
                    
                    <div class="flex items-start justify-between mb-3">
                      <div class="flex items-center">
                        <div class="w-12 h-12 bg-gradient-to-br 
                          <%= doc[:type] == 'photo' ? 'from-blue-100 to-blue-200' : 'from-purple-100 to-purple-200' %> 
                          rounded-lg flex items-center justify-center mr-3">
                          <% if doc[:attachment].content_type&.starts_with?('image/') %>
                            <svg class="w-6 h-6 <%= doc[:type] == 'photo' ? 'text-blue-600' : 'text-purple-600' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                          <% else %>
                            <svg class="w-6 h-6 <%= doc[:type] == 'photo' ? 'text-blue-600' : 'text-purple-600' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                            </svg>
                          <% end %>
                        </div>
                        <div class="max-w-[120px]">
                          <h4 class="text-sm font-medium text-gray-900 truncate" title="<%= doc[:name] %>"><%= doc[:name] %></h4>
                          <p class="text-xs text-gray-500">
                            <%= number_to_human_size(doc[:attachment].blob.byte_size) %>
                          </p>
                          <p class="text-xs text-gray-400 mt-1">
                            Uploaded <%= time_ago_in_words(doc[:attachment].created_at) %> ago
                          </p>
                        </div>
                      </div>
                    </div>
                    
                    <div class="mb-3">
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium 
                        <%= doc[:attachment].content_type&.starts_with?('image/') ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                        <%= doc[:attachment].filename.extension.upcase %>
                        <% if doc[:attachment].content_type&.starts_with?('image/') %>
                          <span class="ml-1">
                            • <%= doc[:attachment].blob.metadata[:width] %>×<%= doc[:attachment].blob.metadata[:height] %>
                          </span>
                        <% end %>
                      </span>
                    </div>
                    
                    <div class="flex items-center justify-between">
                      <div class="flex items-center space-x-1">
                        <% if doc[:attachment].content_type&.starts_with?('image/') %>
                          <button type="button" 
                                  data-document-manager-target="previewBtn"
                                  data-action="click->document-manager#previewImage"
                                  data-image-url="<%= url_for(doc[:attachment]) %>"
                                  data-image-title="<%= doc[:name] %>"
                                  class="inline-flex items-center p-2 text-sm bg-blue-50 text-blue-700 rounded-lg hover:bg-blue-100 transition-colors group/tooltip"
                                  title="Preview">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                            </svg>
                            <span class="absolute -top-8 left-1/2 transform -translate-x-1/2 bg-gray-800 text-white text-xs rounded py-1 px-2 opacity-0 group-hover/tooltip:opacity-100 transition-opacity whitespace-nowrap">
                              Preview
                            </span>
                          </button>
                        <% end %>
                        
                        <%= link_to url_for(doc[:attachment]), 
                            target: "_blank",
                            class: "inline-flex items-center p-2 text-sm bg-gray-50 text-gray-700 rounded-lg hover:bg-gray-100 transition-colors group/tooltip",
                            title: "View" do %>
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                          </svg>
                          <span class="absolute -top-8 left-1/2 transform -translate-x-1/2 bg-gray-800 text-white text-xs rounded py-1 px-2 opacity-0 group-hover/tooltip:opacity-100 transition-opacity whitespace-nowrap">
                            View
                          </span>
                        <% end %>
                        
                        <%= link_to rails_blob_path(doc[:attachment], disposition: "attachment"), 
                            class: "inline-flex items-center p-2 text-sm bg-green-50 text-green-700 rounded-lg hover:bg-green-100 transition-colors group/tooltip",
                            title: "Download" do %>
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                          </svg>
                          <span class="absolute -top-8 left-1/2 transform -translate-x-1/2 bg-gray-800 text-white text-xs rounded py-1 px-2 opacity-0 group-hover/tooltip:opacity-100 transition-opacity whitespace-nowrap">
                            Download
                          </span>
                        <% end %>
                      </div>
                      
                      <%= render_dialog do %>
                        <%= dialog_trigger do %>
                          <%= button_to destroy_attachment_settings_client_path(@client,doc[:type]), 
                              method: :delete,
                              data: { 
                                confirm: "Are you sure you want to delete this document?",
                                turbo_confirm: "Are you sure you want to delete this document?"
                              },
                              class: "inline-flex items-center p-2 text-sm bg-red-50 text-red-700 rounded-lg hover:bg-red-100 transition-colors group/tooltip",
                              title: "Delete" do %>
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                            </svg>
                            <span class="absolute -top-8 left-1/2 transform -translate-x-1/2 bg-gray-800 text-white text-xs rounded py-1 px-2 opacity-0 group-hover/tooltip:opacity-100 transition-opacity whitespace-nowrap">
                              Delete
                            </span>
                          <% end %>
                        <% end %>
                        <%= dialog_content do %>
                          <div class="flex flex-col space-y-1.5 pb-3">
                            <h3 class="font-semibold leading-none tracking-tight text-xl">Delete Attachment</h3>
                            <p class="text-sm text-muted-foreground mb-4">Are you sure? This can't be undone.</p>
                          </div>
                          <div class="items-center py-2 flex gap-2">
                            <%= button_to "Yes", destroy_attachment_settings_client_path(@client, doc[:type]), method: :delete,
                                  class: "inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 h-10 px-4 py-2 border border-red-100 bg-red-100 text-red-500 hover:bg-red-500 hover:text-white" %>
                            <button data-ui--dialog-target="closeButton" type="button"
                              class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 h-10 px-4 py-2 border border-input bg-background hover:bg-accent hover:text-accent-foreground">
                              Cancel
                            </button>
                          </div>
                        <% end %>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>

            <div data-document-manager-target="imageModal" 
                 data-action="click->document-manager#backdropClick"
                 class="fixed inset-0 bg-gray-900 bg-opacity-80 flex items-center justify-center p-4 z-50 hidden transition-opacity duration-300"
                 style="backdrop-filter: blur(4px);">
              <div class="bg-white rounded-xl shadow-2xl max-w-4xl w-full max-h-[90vh] overflow-hidden transform transition-transform duration-300 scale-95"
                   data-document-manager-target="modalContent">
                <div class="flex items-center justify-between p-4 border-b border-gray-200">
                  <h3 data-document-manager-target="modalTitle" class="text-lg font-medium text-gray-900 truncate max-w-md"></h3>
                  <div class="flex items-center space-x-2">
                    <button type="button" 
                            data-action="click->document-manager#downloadImage"
                            class="p-2 text-gray-500 hover:text-gray-700 rounded-lg hover:bg-gray-100 transition-colors"
                            title="Download">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                      </svg>
                    </button>
                    <button type="button" 
                            data-action="click->document-manager#closeModal"
                            class="p-2 text-gray-500 hover:text-gray-700 rounded-lg hover:bg-gray-100 transition-colors"
                            title="Close">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                      </svg>
                    </button>
                  </div>
                </div>
                <div class="p-4 overflow-auto max-h-[calc(90vh-80px)]">
                  <img data-document-manager-target="modalImage" 
                       src="" 
                       alt="Document preview" 
                       class="max-w-full max-h-full mx-auto rounded-lg shadow-sm">
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      
      <div class="space-y-6">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
          <div class="bg-gradient-to-r from-indigo-50 to-blue-50 px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900">Quick Info</h3>
          </div>
          <div class="p-6 space-y-4">
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-500">Lead Code</span>
              <span class="text-sm font-medium text-gray-900">
                <%= @client.code || 'Not assigned' %>
              </span>
            </div>
            
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-500">Leadquest Code</span>
              <span class="text-sm font-medium text-gray-900">
                <%= @client.leadquest_code || 'Not assigned' %>
              </span>
            </div>
            
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-500">Documents</span>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                <%= 
                  attachment_count = 0
                  attachment_count += 1 if @client.photo.attached?
                  attachment_count += 1 if @client.pan_scan.attached?
                  attachment_count += 1 if @client.aadhar_scan.attached?
                  pluralize(attachment_count, 'file')
                %>
              </span>
            </div>
            
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-500">Created</span>
              <span class="text-sm font-medium text-gray-900">
                <%= @client.created_at.strftime("%b %d, %Y") %>
              </span>
            </div>
            
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-500">Last Updated</span>
              <span class="text-sm font-medium text-gray-900">
                <%= time_ago_in_words(@client.updated_at) %> ago
              </span>
            </div>
          </div>
        </div>
        
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
          <div class="bg-gradient-to-r from-gray-50 to-slate-50 px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900">Activity Timeline</h3>
          </div>
          <div class="p-6">
            <div class="space-y-4">
              <div class="flex items-start space-x-3">
                <div class="flex-shrink-0">
                  <div class="w-2 h-2 bg-green-400 rounded-full mt-2"></div>
                </div>
                <div class="min-w-0 flex-1">
                  <p class="text-sm text-gray-900">Client created</p>
                  <p class="text-xs text-gray-500">
                    <%= @client.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                  </p>
                </div>
              </div>
              
              <% if @client.updated_at != @client.created_at %>
                <div class="flex items-start space-x-3">
                  <div class="flex-shrink-0">
                    <div class="w-2 h-2 bg-blue-400 rounded-full mt-2"></div>
                  </div>
                  <div class="min-w-0 flex-1">
                    <p class="text-sm text-gray-900">Documents uploaded</p>
                    <p class="text-xs text-gray-500">
                      <%= pluralize(attachment_count, 'attachment') %> available
                    </p>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
        
        <% if @client.company.present? %>
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
            <div class="bg-gradient-to-r from-teal-50 to-cyan-50 px-6 py-4 border-b border-gray-200">
              <h3 class="text-lg font-semibold text-gray-900">Company Details</h3>
            </div>
            <div class="p-6">
              <div class="text-center">
                <div class="w-12 h-12 bg-gradient-to-br from-teal-400 to-cyan-500 rounded-xl flex items-center justify-center mx-auto mb-3">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-4m-5 0H3m2 0h4M9 7h6m-6 4h6m-2 4h2M7 7h.01M7 11h.01M7 15h.01"></path>
                  </svg>
                </div>
                <h4 class="text-lg font-semibold text-gray-900 mb-1">
                  <%= @client.company.name %>
                </h4>
                <p class="text-sm text-gray-500 mb-4">Associated Company</p>
                <%= link_to settings_company_path(@client.company), 
                    class: "inline-flex items-center px-4 py-2 text-sm bg-teal-50 text-teal-700 border border-teal-200 rounded-lg hover:bg-teal-100 transition-all" do %>
                  View Company Details
                  <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>        
      </div>
    </div>
  </div>
</div>
