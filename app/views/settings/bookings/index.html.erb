<div class="min-h-screen bg-gray-50">
  <div class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Bookings Management</h1>
          <p class="mt-2 text-sm text-gray-600">Manage all property bookings and reservations</p>
        </div>
      </div>
    </div>
  </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-6 mt-3 ml-3">
      <div class="bg-white overflow-hidden shadow-sm rounded-lg border border-gray-200">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-blue-500 rounded-md flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Total Bookings</dt>
                <dd class="text-lg font-semibold text-gray-900"><%= @bookings.total_count rescue @bookings.count %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow-sm rounded-lg border border-gray-200">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-green-500 rounded-md flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Registered</dt>
                <dd class="text-lg font-semibold text-gray-900"><%= Booking.where(registered: true).count %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow-sm rounded-lg border border-gray-200">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-yellow-500 rounded-md flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Pending Registration</dt>
                <dd class="text-lg font-semibold text-gray-900"><%= Booking.where(registered: false).count %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow-sm rounded-lg border border-gray-200">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-purple-500 rounded-md flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M4 4a2 2 0 00-2 2v1h16V6a2 2 0 00-2-2H4z"></path>
                  <path fill-rule="evenodd" d="M18 9H2v5a2 2 0 002 2h12a2 2 0 002-2V9zM4 13a1 1 0 011-1h1a1 1 0 110 2H5a1 1 0 01-1-1zm5-1a1 1 0 100 2h1a1 1 0 100-2H9z" clip-rule="evenodd"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Total Loan Amount</dt>
                <dd class="text-lg font-semibold text-gray-900">₹<%= number_to_currency(Booking.sum(:loan_amount) || 0, unit: "", precision: 0) %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="bg-white shadow-sm rounded-lg border border-gray-200 overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200 bg-gray-50 flex items-center justify-between">
        <h3 class="text-lg font-medium text-gray-900">Bookings List</h3>
        <%= render 'layouts/advanced_search', klass: 'Booking' %>
      </div>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                <div class="flex items-center space-x-1">
                  <span>Booking Details</span>
                </div>
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Property Info</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Registration</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Financial</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Dates</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @bookings.each do |booking| %>
              <tr class="hover:bg-gray-50" data-booking-id="<%= booking.id %>">
                
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex flex-col">
                    <div class="text-sm font-medium text-gray-900">
                      <%= link_to booking.code.presence || "##{booking.id}", settings_booking_path(booking), class: "text-indigo-600 hover:text-indigo-900" %>
                    </div>
                    <div class="text-sm text-gray-500">
                      <%= booking.date&.strftime("%b %d, %Y") || "No date" %>
                    </div>
                    <div class="text-xs text-gray-400">
                      By: <%= booking.booked_by.name rescue "Unknown" %>
                    </div>
                  </div>
                </td>

                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900">
                    <div class="font-medium"><%= booking.project.name rescue '' %></div>
                    <div class="text-gray-500">Flat: <%= booking.flat.name rescue booking.code %></div>
                    <div class="text-gray-500"><%= booking.company.name rescue '' %></div>
                  </div>
                </td>

                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex flex-col space-y-1">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= booking.registered? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                      <%= booking.registered? ? 'Registered' : 'Pending' %>
                    </span>
                    <% if booking.registered? %>
                      <div class="text-xs text-gray-500">
                        <%= booking.registration_date&.strftime("%b %d, %Y") %>
                      </div>
                      <div class="text-xs text-gray-400">
                        <%= booking.registration_no %>
                      </div>
                    <% end %>
                  </div>
                </td>

                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900">
                    <% if booking.loan_amount.present? %>
                      <div class="font-medium">₹<%= number_with_delimiter(booking.loan_amount.to_i) %></div>
                      <div class="text-xs text-gray-500">Loan Amount</div>
                    <% end %>
                    <% if booking.sdr_percent.present? %>
                      <div class="text-xs text-gray-500">SDR: <%= booking.sdr_percent %>%</div>
                    <% end %>
                  </div>
                </td>

                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900">
                    <% if booking.posession_date.present? %>
                      <div class="text-xs">
                        <span class="text-gray-500">Possession:</span>
                        <div class="font-medium"><%= booking.posession_date.strftime("%b %d, %Y") %></div>
                      </div>
                    <% end %>
                    <% if booking.ncd.present? %>
                      <div class="text-xs mt-1">
                        <span class="text-gray-500">NCD:</span>
                        <div><%= booking.ncd.strftime("%b %d, %Y") %></div>
                      </div>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <% if respond_to?(:paginate) && @bookings.respond_to?(:current_page) %>
        <div class="bg-white px-4 py-3 border-t border-gray-200 sm:px-6">
          <div class="flex items-center justify-between">
            <div class="flex-1 flex justify-between sm:hidden">
              <%= paginate @bookings, theme: 'twitter_bootstrap_4' %>
            </div>
            <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
              <div>
                <p class="text-sm text-gray-700">
                  Showing <span class="font-medium"><%= @bookings.offset_value + 1 %></span> to 
                  <span class="font-medium"><%= [@bookings.offset_value + @bookings.limit_value, @bookings.total_count].min %></span> of 
                  <span class="font-medium"><%= @bookings.total_count %></span> results
                </p>
              </div>
              <div>
                <%= paginate @bookings, theme: 'twitter_bootstrap_4' %>
              </div>
            </div>
          </div>
        </div>
      <% else %>
        <div class="bg-white px-4 py-3 border-t border-gray-200 sm:px-6">
          <div class="text-sm text-gray-700 text-center">
            Showing all <%= @bookings.count %> results
          </div>
        </div>
      <% end %>
    </div>
    <div class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6">
      <% if @pagy.pages > 1 %>
        <%= render 'layouts/pagination', pagy: @pagy %>
      <% end %>
    </div>
  </div>
</div>
