<div data-controller="payment-plan-show">
  <div class="mt-1 mb-4 flex items-center w-full">
    <span class="w-1/3">
      <%= link_to settings_projects_payment_plans_path, class: "inline-flex justify-between items-center p-2 text-xs border border-gray-200 rounded-lg bg-white hover:shadow-md transition-all duration-300 hover:scale-105" do %>
        <div class="flex items-center gap-1">
          <span class="text-gray-800"><%= render 'icons/back' %></span>
          <div class="flex flex-col">
            <span class="text-gray-500">Back to Payment Plans</span>
          </div>
        </div>
      <% end %>
    </span>

    <span class="w-1/3 text-black text-base font-semibold flex justify-center">Payment Plan Details</span>
    <span class="w-1/3 flex justify-end">
      <%= render 'shared/breadcrumb', record_class: 'Payment Plan Details' %>
    </span>
  </div>
  
  <div class="space-y-6 animate-fade-in">
    <div class="bg-gradient-to-r from-white to-gray-50 rounded-xl shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-all duration-300">
      <div class="p-6">
        <div class="flex justify-between items-start mb-4">
          <div class="flex-1">
            <h1 class="text-2xl font-bold text-gray-900 mb-2 animate-slide-up"><%= @payment_plan.name %></h1>
            <p class="text-gray-600 flex items-center">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
              <%= @payment_plan.project&.name || "No project assigned" %>
            </p>
          </div>
          <div class="flex gap-2">
            <%= render partial: 'layouts/edit_delete_actions',
             locals: { 
               object: @payment_plan,
               object_class: 'Projects::PaymentPlan',
               form_partial: 'settings/projects_payment_plans/form',
               delete_path: settings_projects_payment_plan_path(@payment_plan)
             } %>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
          <div class="bg-white rounded-lg p-4 border border-gray-100 hover:border-blue-200 transition-all duration-300 hover:shadow-sm animate-scale-in" style="animation-delay: 0.1s">
            <div class="flex items-center">
              <div class="p-2 bg-blue-100 rounded-lg">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-gray-600">Total Stages</p>
                <p class="text-lg font-semibold text-gray-900"><%= @payment_plan.stages.count %></p>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-lg p-4 border border-gray-100 hover:border-green-200 transition-all duration-300 hover:shadow-sm animate-scale-in" style="animation-delay: 0.2s">
            <div class="flex items-center">
              <div class="p-2 bg-green-100 rounded-lg">
                <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-gray-600">Total Percentage</p>
                <% total_percentage = @payment_plan.stages.sum(:percentage) %>
                <p class="text-lg font-semibold <%= total_percentage == 100 ? 'text-green-600' : 'text-yellow-600' %>">
                  <%= total_percentage %>%
                </p>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-lg p-4 border border-gray-100 hover:border-purple-200 transition-all duration-300 hover:shadow-sm animate-scale-in" style="animation-delay: 0.3s">
            <div class="flex items-center">
              <div class="p-2 bg-purple-100 rounded-lg">
                <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-gray-600">Total Amount</p>
                <% total_amount = @payment_plan.stages.sum(:amount) %>
                <p class="text-lg font-semibold text-gray-900">
                  <% if total_amount > 0 %>
                    ₹<%= number_with_delimiter(total_amount.to_i) %>
                  <% else %>
                    N/A
                  <% end %>
                </p>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-lg p-4 border border-gray-100 hover:border-gray-300 transition-all duration-300 hover:shadow-sm animate-scale-in" style="animation-delay: 0.4s">
            <div class="flex items-center">
              <div class="p-2 bg-gray-100 rounded-lg">
                <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a4 4 0 118 0v4m-4 0l-4 8v6h8v-6l-4-8z"></path>
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-gray-600">Created</p>
                <p class="text-lg font-semibold text-gray-900"><%= @payment_plan.created_at.strftime("%b %d, %Y") %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-all duration-300">
      <div class="p-6 border-b border-gray-200">
        <div class="flex justify-between items-center">
          <h2 class="text-lg font-semibold text-gray-900">Payment Stages</h2>
          <div class="flex items-center gap-2">
            <button data-action="click->payment-plan-show#toggleView" 
                    data-payment-plan-show-target="viewToggle"
                    class="inline-flex items-center px-3 py-1 text-sm bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-all duration-300">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"></path>
              </svg>
              <span data-payment-plan-show-target="viewText">Card View</span>
            </button>
          </div>
        </div>
      </div>

      <div class="p-6">
        <% if @payment_plan.stages.any? %>
          <div data-payment-plan-show-target="cardView" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <% @payment_plan.stages.each_with_index do |stage, index| %>
              <div class="bg-gradient-to-br from-white to-gray-50 rounded-lg border border-gray-200 p-4 hover:shadow-md transition-all duration-300 hover:scale-105 animate-slide-up" style="animation-delay: <%= index * 0.1 %>s">
                <div class="flex items-start justify-between mb-3">
                  <h3 class="font-semibold text-gray-900 truncate"><%= stage.name %></h3>
                  <span class="text-xs bg-brand/10 text-brand px-2 py-1 rounded-full">Stage <%= index + 1 %></span>
                </div>
                
                <div class="space-y-3">
                  <div class="flex justify-between items-center">
                    <span class="text-sm text-gray-600">Percentage:</span>
                    <% if stage.percentage.present? && stage.percentage > 0 %>
                      <span class="font-medium text-blue-600"><%= stage.percentage %>%</span>
                    <% else %>
                      <span class="text-gray-400 text-sm">N/A</span>
                    <% end %>
                  </div>
                  
                  <div class="flex justify-between items-center">
                    <span class="text-sm text-gray-600">Amount:</span>
                    <% if stage.amount.present? && stage.amount > 0 %>
                      <span class="font-medium text-green-600">₹<%= number_with_delimiter(stage.amount.to_i) %></span>
                    <% else %>
                      <span class="text-gray-400 text-sm">N/A</span>
                    <% end %>
                  </div>
                  
                  <div class="flex justify-between items-center">
                    <span class="text-sm text-gray-600">Cost Type:</span>
                    <% if stage.cost_type.present? %>
                      <span class="text-sm font-medium text-purple-600 bg-purple-50 px-2 py-1 rounded truncate">
                        <%= stage.cost_type.name %>
                      </span>
                    <% else %>
                      <span class="text-gray-400 text-sm">N/A</span>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>

          <div data-payment-plan-show-target="tableView" class="hidden">
            <div class="overflow-x-auto">
              <%= render_table class: "overflow-hidden animate-fade-in" do %>
                <%= table_head class: "rounded-t-md py-2 px-4 bg-gradient-to-bl from-[#ffe4e6] to-[#ccfbf1]" do %>
                  <%= table_header do %>
                    <span class="text-gray-700 text-sm font-bold block">Stage</span>
                  <% end %>
                  <%= table_header do %>
                    <span class="text-gray-700 text-sm font-bold block">Name</span>
                  <% end %>
                  <%= table_header do %>
                    <span class="text-gray-700 text-sm font-bold block">Percentage</span>
                  <% end %>
                  <%= table_header do %>
                    <span class="text-gray-700 text-sm font-bold block">Amount</span>
                  <% end %>
                  <%= table_header do %>
                    <span class="text-gray-700 text-sm font-bold block">Cost Type</span>
                  <% end %>
                <% end %>
                
                <%= table_body do %>
                  <% @payment_plan.stages.each_with_index do |stage, index| %>
                    <%= table_row class: "hover:bg-gray-50 transition-colors duration-200" do %>
                      <%= table_column do %>
                        <div class="whitespace-nowrap">
                          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-brand/10 text-brand">
                            Stage <%= index + 1 %>
                          </span>
                        </div>
                      <% end %>
                      <%= table_column do %>
                        <div class="whitespace-nowrap font-medium text-gray-900">
                          <%= stage.name %>
                        </div>
                      <% end %>
                      <%= table_column do %>
                        <div class="whitespace-nowrap">
                          <% if stage.percentage.present? && stage.percentage > 0 %>
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                              <%= stage.percentage %>%
                            </span>
                          <% else %>
                            <span class="text-gray-400 text-sm">N/A</span>
                          <% end %>
                        </div>
                      <% end %>
                      <%= table_column do %>
                        <div class="whitespace-nowrap">
                          <% if stage.amount.present? && stage.amount > 0 %>
                            <span class="font-medium text-green-600">
                              ₹<%= number_with_delimiter(stage.amount.to_i) %>
                            </span>
                          <% else %>
                            <span class="text-gray-400 text-sm">N/A</span>
                          <% end %>
                        </div>
                      <% end %>
                      <%= table_column do %>
                        <div class="whitespace-nowrap">
                          <% if stage.cost_type.present? %>
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                              <%= stage.cost_type.name %>
                            </span>
                          <% else %>
                            <span class="text-gray-400 text-sm">N/A</span>
                          <% end %>
                        </div>
                      <% end %>
                    <% end %>
                  <% end %>
                <% end %>
              <% end %>
            </div>
          </div>
        <% else %>
          <div class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No payment stages</h3>
            <p class="mt-1 text-sm text-gray-500">Get started by adding payment stages to this plan.</p>
            <div class="mt-6">
              <%= render_sheet direction: "right", width: "w-full sm:max-w-full lg:max-w-full md:w-2/3 lg:w-2/3 xl:w-2/3", class: "!slide-in-from-right bg-white/50 backdrop-blur-xl p-0" do %>
                <%= sheet_trigger do %>
                  <%= render_button as: :link, href: "", class: "bg-brand text-white gap-2 hover:bg-brand/80" do %>
                    <%= render 'icons/add' %>
                    <span>Add First Stage</span>
                  <% end %>
                <% end %>

                <%= sheet_content do %>
                  <%= render 'form', payment_plan: @payment_plan %>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <% if @payment_plan.stages.any? %>
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-all duration-300">
        <div class="p-6 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900">Progress Visualization</h2>
          <p class="text-sm text-gray-600 mt-1">Visual representation of payment stages</p>
        </div>
        
        <div class="p-6">
          <div class="space-y-4">
            <% total_percentage = @payment_plan.stages.sum(:percentage) %>
            <% total_amount = @payment_plan.stages.sum(:amount) %>
            
            <% if total_percentage > 0 %>
              <div class="animate-slide-up">
                <div class="flex justify-between items-center mb-2">
                  <span class="text-sm font-medium text-gray-700">Percentage Distribution</span>
                  <span class="text-sm text-gray-600"><%= total_percentage %>% Total</span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-3 overflow-hidden">
                  <% cumulative = 0 %>
                  <div class="h-full flex">
                    <% @payment_plan.stages.each_with_index do |stage, index| %>
                      <% if stage.percentage.present? && stage.percentage > 0 %>
                        <% width_percentage = (stage.percentage / total_percentage.to_f) * 100 %>
                        <div class="h-full transition-all duration-1000 ease-out animate-expand-width" 
                             style="width: <%= width_percentage %>%; background-color: hsl(<%= (index * 60) % 360 %>, 70%, 60%); animation-delay: <%= index * 0.2 %>s"
                             title="<%= stage.name %>: <%= stage.percentage %>%">
                        </div>
                      <% end %>
                    <% end %>
                  </div>
                </div>
                <div class="flex flex-wrap gap-2 mt-3">
                  <% @payment_plan.stages.each_with_index do |stage, index| %>
                    <% if stage.percentage.present? && stage.percentage > 0 %>
                      <div class="flex items-center text-xs animate-fade-in" style="animation-delay: <%= index * 0.1 + 0.5 %>s">
                        <div class="w-3 h-3 rounded-sm mr-2" style="background-color: hsl(<%= (index * 60) % 360 %>, 70%, 60%)"></div>
                        <span class="text-gray-600"><%= stage.name %> (<%= stage.percentage %>%)</span>
                      </div>
                    <% end %>
                  <% end %>
                </div>
              </div>
            <% end %>

            <% if total_amount > 0 %>
              <div class="animate-slide-up" style="animation-delay: 0.3s">
                <div class="flex justify-between items-center mb-2">
                  <span class="text-sm font-medium text-gray-700">Amount Distribution</span>
                  <span class="text-sm text-gray-600">₹<%= number_with_delimiter(total_amount.to_i) %> Total</span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-3 overflow-hidden">
                  <div class="h-full flex">
                    <% @payment_plan.stages.each_with_index do |stage, index| %>
                      <% if stage.amount.present? && stage.amount > 0 %>
                        <% width_percentage = (stage.amount / total_amount.to_f) * 100 %>
                        <div class="h-full transition-all duration-1000 ease-out animate-expand-width" 
                             style="width: <%= width_percentage %>%; background-color: hsl(<%= 120 + (index * 40) % 240 %>, 60%, 55%); animation-delay: <%= index * 0.2 + 0.6 %>s"
                             title="<%= stage.name %>: ₹<%= number_with_delimiter(stage.amount.to_i) %>">
                        </div>
                      <% end %>
                    <% end %>
                  </div>
                </div>
                <div class="flex flex-wrap gap-2 mt-3">
                  <% @payment_plan.stages.each_with_index do |stage, index| %>
                    <% if stage.amount.present? && stage.amount > 0 %>
                      <div class="flex items-center text-xs animate-fade-in" style="animation-delay: <%= index * 0.1 + 0.8 %>s">
                        <div class="w-3 h-3 rounded-sm mr-2" style="background-color: hsl(<%= 120 + (index * 40) % 240 %>, 60%, 55%)"></div>
                        <span class="text-gray-600"><%= stage.name %> (₹<%= number_with_delimiter(stage.amount.to_i) %>)</span>
                      </div>
                    <% end %>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<style>
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes slideUp {
    from { 
      opacity: 0;
      transform: translateY(20px);
    }
    to { 
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slideDown {
    from { 
      opacity: 0;
      transform: translateY(-20px);
    }
    to { 
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes scaleIn {
    from { 
      opacity: 0;
      transform: scale(0.95);
    }
    to { 
      opacity: 1;
      transform: scale(1);
    }
  }

  @keyframes expandWidth {
    from { width: 0%; }
    to { width: var(--target-width, 100%); }
  }

  .animate-fade-in {
    animation: fadeIn 0.6s ease-out forwards;
  }

  .animate-slide-up {
    animation: slideUp 0.6s ease-out forwards;
  }

  .animate-slide-down {
    animation: slideDown 0.6s ease-out forwards;
  }

  .animate-scale-in {
    animation: scaleIn 0.6s ease-out forwards;
  }

  .animate-expand-width {
    animation: expandWidth 1s ease-out forwards;
  }
</style>
