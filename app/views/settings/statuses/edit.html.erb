<%= turbo_frame_tag "status_modal" do %>
  <div class="fixed inset-0 z-50 overflow-y-auto"
       data-controller="modal"
       data-modal-target="backdrop"
       data-action="click->modal#closeOnBackdrop">
    
    <div class="fixed inset-0 transition-opacity bg-black bg-opacity-50 backdrop-blur-sm"
         data-modal-target="overlay"
         style="animation: fadeIn 0.3s ease-out"></div>
    
    <span class="hidden sm:inline-block sm:align-middle sm:h-screen">&#8203;</span>
    
    <div class="inline-block w-full max-w-2xl my-8 overflow-hidden text-left align-middle transition-all transform bg-white shadow-2xl rounded-3xl"
         data-modal-target="modal"
         tabindex="-1"
         style="animation: slideInDown 0.4s cubic-bezier(0.34, 1.56, 0.64, 1)">      
      <%= render 'form', status: @status %>
    </div>
  </div>
<% end %>

<style>
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  
  @keyframes slideInDown {
    from { 
      opacity: 0;
      transform: translate3d(0, -100px, 0) scale(0.9);
    }
    to { 
      opacity: 1;
      transform: translate3d(0, 0, 0) scale(1);
    }
  }
</style>
