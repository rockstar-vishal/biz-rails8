<div id="status_<%= status.id %>" 
     class="status-card bg-white rounded-2xl border border-gray-200 hover:border-gray-300 transition-all duration-200 hover:shadow-lg group animate-slide-up"
     data-status-id="<%= status.id %>"
     data-status-index-target="row">
  <div class="p-6">
    <div class="flex items-start justify-between mb-4">
      <div class="flex items-center space-x-3">
        <div class="w-12 h-12 bg-gradient-to-br 
                    <%= status.for_class == 'Parking' ? 'from-blue-500 to-blue-600' : 'from-purple-500 to-purple-600' %> 
                    rounded-2xl flex items-center justify-center shadow-lg">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <% if status.for_class == 'Parking' %>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7v8a2 2 0 002 2h6M8 7V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V15a2 2 0 01-2 2h-2M8 7H6a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2v-2"></path>
            <% else %>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"></path>
            <% end %>
          </svg>
        </div>
        <div>
          <h3 class="text-lg font-semibold text-gray-900 group-hover:text-blue-600 transition-colors" data-searchable="name">
            <%= status.name %>
          </h3>
          <p class="text-sm text-gray-500" data-searchable="class"><%= status.for_class %></p>
        </div>
      </div>
      
      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium capitalize
                  <%= case status.tag
                      when 'available' then 'bg-green-100 text-green-800'
                      when 'booked' then 'bg-orange-100 text-orange-800'
                      when 'blocked' then 'bg-red-100 text-red-800'
                      end %>" data-searchable="tag">
        <div class="w-2 h-2 rounded-full mr-2 
                    <%= case status.tag
                        when 'available' then 'bg-green-400'
                        when 'booked' then 'bg-orange-400'
                        when 'blocked' then 'bg-red-400'
                        end %>"></div>
        <%= status.tag&.humanize %>
      </span>
    </div>

    <div class="space-y-2 mb-4">
      <div class="flex items-center text-sm text-gray-500">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        Created <%= time_ago_in_words(status.created_at) %> ago
      </div>
      <% if status.updated_at != status.created_at %>
        <div class="flex items-center text-sm text-gray-500">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          Updated <%= time_ago_in_words(status.updated_at) %> ago
        </div>
      <% end %>
    </div>

    <div class="flex items-center justify-between pt-4 border-t border-gray-100">
      <div class="flex items-center space-x-2">
        <%= link_to settings_status_path(status), 
            class: "p-2 text-gray-400 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-all duration-200",
            data: { turbo_frame: "status_modal" },
            title: "View Details" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
          </svg>
        <% end %>
        
        <%= link_to edit_settings_status_path(status), 
            class: "p-2 text-gray-400 hover:text-purple-600 hover:bg-purple-50 rounded-lg transition-all duration-200",
            data: { turbo_frame: "status_modal" },
            title: "Edit Status" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
        <% end %>
      </div>
      
      <%= render_dialog do %>
        <%= dialog_trigger do %>
          <button class="inline-flex items-center justify-center p-2 text-red-600 bg-red-50 transition-all duration-200 focus:relative rounded-lg border border-red-200 hover:bg-red-100" title="Delete">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
            </svg>
          </button>
        <% end %>

        <%= dialog_content do %>
          <div class="flex flex-col space-y-1.5 pb-3">
            <h3 class="font-semibold leading-none tracking-tight text-xl">Delete Status</h3>
            <p class="text-sm text-muted-foreground mb-4">Are you sure? This can't be undone.</p>
          </div>
          <div class="items-center py-2 flex gap-2">
            <%= button_to "Yes", settings_status_path(status), method: :delete,
                  class: "inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 h-10 px-4 py-2 border border-red-100 bg-red-100 text-red-500 hover:bg-red-500 hover:text-white" %>
            <button data-ui--dialog-target="closeButton" type="button"
              class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 h-10 px-4 py-2 border border-input bg-background hover:bg-accent hover:text-accent-foreground">
              Cancel
            </button>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
