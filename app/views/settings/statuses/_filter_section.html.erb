<% search_param = local_assigns[:search_param] || request.params[:search] %>
<% filter_param = local_assigns[:filter_param] || request.params[:filter] %>

<div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-6">
  <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between space-y-4 lg:space-y-0">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Status Management</h1>
      <p class="text-sm text-gray-500 mt-1">Manage property and parking statuses</p>
    </div>
    
    <div class="flex flex-col sm:flex-row space-y-3 sm:space-y-0 sm:space-x-4">
      <div class="relative" id="search_container">
        <input type="text" 
               placeholder="Search by name, class, or status..." 
               class="w-full sm:w-80 pl-10 pr-12 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200"
               data-status-index-target="searchInput"
               data-action="input->status-index#search"
               value="<%= search_param %>">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center">
          <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
        </div>
        <button class="absolute inset-y-0 right-0 pr-3 flex items-center <%= search_param.present? ? '' : 'hidden' %>" data-status-index-target="clearSearch" data-action="click->status-index#clearSearch">
          <svg class="h-4 w-4 text-gray-400 hover:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
      
      <div class="flex space-x-2" data-status-index-target="quickFilters">
        <button class="filter-chip px-3 py-2 text-xs font-medium rounded-full border transition-all duration-200 <%= filter_param.blank? || filter_param == 'all' ? 'bg-blue-50 text-blue-700 border-blue-200' : 'hover:bg-gray-50' %>" 
                data-filter="all" data-action="click->status-index#handleFilter">
          All
        </button>
        <button class="filter-chip px-3 py-2 text-xs font-medium rounded-full border transition-all duration-200 <%= filter_param == 'available' ? 'bg-green-50 text-green-700 border-green-200' : 'hover:bg-green-50 hover:text-green-700 hover:border-green-200' %>" 
                data-filter="available" data-action="click->status-index#handleFilter">
          Available
        </button>
        <button class="filter-chip px-3 py-2 text-xs font-medium rounded-full border transition-all duration-200 <%= filter_param == 'booked' ? 'bg-orange-50 text-orange-700 border-orange-200' : 'hover:bg-orange-50 hover:text-orange-700 hover:border-orange-200' %>" 
                data-filter="booked" data-action="click->status-index#handleFilter">
          Booked
        </button>
        <button class="filter-chip px-3 py-2 text-xs font-medium rounded-full border transition-all duration-200 <%= filter_param == 'blocked' ? 'bg-red-50 text-red-700 border-red-200' : 'hover:bg-red-50 hover:text-red-700 hover:border-red-200' %>" 
                data-filter="blocked" data-action="click->status-index#handleFilter">
          Blocked
        </button>
      </div>
      
      <%= link_to new_settings_status_path,
          class: "px-6 py-3 bg-gradient-to-r from-blue-600 to-blue-700 text-white font-medium rounded-xl hover:from-blue-700 hover:to-blue-800 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105",
          data: { turbo_frame: "status_modal" } do %>
        <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
        </svg>
        New Status
      <% end %>
    </div>
  </div>
  
  <div class="mt-4 flex items-center justify-between <%= search_param.present? || (filter_param.present? && filter_param != 'all') ? '' : 'hidden' %>" data-status-index-target="searchInfo">
    <div class="flex items-center space-x-2 text-sm text-gray-600">
      <span>Showing results</span>
      <% if search_param.present? %>
        <span data-status-index-target="searchTermDisplay" class="px-2 py-1 bg-yellow-100 text-yellow-800 rounded-full text-xs">
          "<%= search_param %>"
        </span>
      <% end %>
      <% if filter_param.present? && filter_param != 'all' %>
        <span class="px-2 py-1 bg-blue-100 text-blue-800 rounded-full text-xs">
          <%= filter_param.humanize %>
        </span>
      <% end %>
    </div>
    <button class="text-sm text-blue-600 hover:text-blue-700" data-action="click->status-index#clearAllFilters">Clear all filters</button>
  </div>
</div>
