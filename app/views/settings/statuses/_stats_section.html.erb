<div class="bg-white rounded-xl shadow-sm border border-gray-200 p-4 mb-6"  data-status-index-target="statusGrid" >  
  <div class="flex flex-wrap items-center justify-between gap-4">
    <div class="flex items-center space-x-6">
      <div class="flex items-center space-x-2">
        <div class="w-3 h-3 bg-blue-500 rounded-full"></div>
        <span class="text-sm text-gray-600">Total:</span>
        <span class="text-lg font-semibold text-gray-900" data-status-index-target="totalCount"><%= stats[:total] %></span>
      </div>
      <div class="flex items-center space-x-2">
        <div class="w-3 h-3 bg-green-500 rounded-full"></div>
        <span class="text-sm text-gray-600">Available:</span>
        <span class="text-lg font-semibold text-green-700" data-status-index-target="availableCount"><%= stats[:available] %></span>
      </div>
      <div class="flex items-center space-x-2">
        <div class="w-3 h-3 bg-orange-500 rounded-full"></div>
        <span class="text-sm text-gray-600">Booked:</span>
        <span class="text-lg font-semibold text-orange-700" data-status-index-target="bookedCount"><%= stats[:booked] %></span>
      </div>
      <div class="flex items-center space-x-2">
        <div class="w-3 h-3 bg-red-500 rounded-full"></div>
        <span class="text-sm text-gray-600">Blocked:</span>
        <span class="text-lg font-semibold text-red-700" data-status-index-target="blockedCount"><%= stats[:blocked] %></span>
      </div>
    </div>
    <div class="text-xs text-gray-500">
      Last updated: <span id="lastUpdated">just now</span>
    </div>
  </div>
</div>