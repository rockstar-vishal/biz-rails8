<% content_for :title, @configuration.name %>

<div class="container mx-auto px-4 py-6" data-controller="configuration-show">
  <div class="mb-8">
    <div class="flex items-center justify-between mb-4">
      <div>
        <%= link_to settings_configurations_path, 
            class: "inline-flex items-center text-blue-600 hover:text-blue-800 transition duration-200 mb-2" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          Back to Configurations
        <% end %>
        <h1 class="text-4xl font-bold text-gray-900 mb-2" data-configuration-show-target="title">
          <%= @configuration.name %>
        </h1>
        <p class="text-gray-600">Configuration Details & Information</p>
      </div>
      
      <div class="flex space-x-3">
        <%= render 'layouts/action_buttons', 
            record: @configuration, 
            module_name: 'configuration',
            edit_path: 'edit_settings_configuration',
            dialog: true
          %>
        
        <button data-action="click->configuration-show#toggleDeleteModal" 
                class="inline-flex items-center px-4 py-2 bg-red-600 text-white font-medium rounded-lg hover:bg-red-700 transform hover:scale-105 transition duration-200 shadow-lg hover:shadow-xl">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
          </svg>
          Delete Configuration
        </button>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <div class="lg:col-span-2">
      <div class="bg-white rounded-xl shadow-lg p-8 transform hover:scale-[1.02] transition duration-300" 
           data-configuration-show-target="detailsCard">
        <div class="flex items-center mb-6">
          <div class="p-3 bg-blue-100 rounded-full mr-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
          </div>
          <h2 class="text-2xl font-semibold text-gray-900">Configuration Information</h2>
        </div>
        
        <div class="space-y-6">
          <div class="border-b border-gray-200 pb-4" data-action="click->configuration-show#highlightField" data-field="name">
            <label class="block text-sm font-medium text-gray-500 mb-2">Configuration Name</label>
            <p class="text-xl font-semibold text-gray-900 transition duration-200 hover:text-blue-600 cursor-pointer">
              <%= @configuration.name %>
            </p>
          </div>
        </div>
      </div>
    </div>

    <div class="space-y-6">
      <div class="bg-gradient-to-br from-green-50 to-blue-50 rounded-xl p-6 shadow-lg transform hover:scale-105 transition duration-300"
           data-configuration-show-target="timestampsCard">
        <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
          <svg class="w-5 h-5 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          Timeline
        </h3>
        <div class="space-y-4">
          <div class="flex items-start space-x-3">
            <div class="flex-shrink-0 w-2 h-2 bg-green-400 rounded-full mt-2"></div>
            <div>
              <p class="text-sm font-medium text-gray-900">Created</p>
              <p class="text-sm text-gray-600">
                <%= @configuration.created_at.strftime("%B %d, %Y") %>
              </p>
              <p class="text-xs text-gray-500">
                <%= time_ago_in_words(@configuration.created_at) %> ago
              </p>
            </div>
          </div>
          
          <% if @configuration.updated_at != @configuration.created_at %>
            <div class="flex items-start space-x-3">
              <div class="flex-shrink-0 w-2 h-2 bg-blue-400 rounded-full mt-2"></div>
              <div>
                <p class="text-sm font-medium text-gray-900">Last Updated</p>
                <p class="text-sm text-gray-600">
                  <%= @configuration.updated_at.strftime("%B %d, %Y") %>
                </p>
                <p class="text-xs text-gray-500">
                  <%= time_ago_in_words(@configuration.updated_at) %> ago
                </p>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <div class="bg-white rounded-xl p-6 shadow-lg border-l-4 border-blue-500">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Quick Actions</h3>
        <div class="space-y-3">
          <button data-action="click->configuration-show#copyConfigurationInfo" 
                  class="block w-full text-center px-4 py-3 bg-green-50 text-green-700 rounded-lg hover:bg-green-100 transition duration-200 font-medium">
            <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
            </svg>
            Copy Configuration Info
          </button>
        </div>
      </div>
    </div>
  </div>

  <div data-configuration-show-target="deleteModal" 
       class="fixed inset-0 z-50 overflow-y-auto hidden" 
       style="background-color: rgba(0, 0, 0, 0.5);">
    <div class="flex items-center justify-center min-h-screen px-4">
      <div class="bg-white rounded-xl p-6 max-w-md w-full transform scale-95 opacity-0 transition-all duration-300"
           data-configuration-show-target="deleteModalContent">
        <div class="flex items-center mb-4">
          <div class="p-3 bg-red-100 rounded-full mr-4">
            <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"/>
            </svg>
          </div>
        </div>
        
        <p class="text-gray-600 mb-6">
          Are you sure you want to delete <strong><%= @configuration.name %></strong>? This action cannot be undone.
        </p>
        
        <div class="flex space-x-3">
          <button data-action="click->configuration-show#toggleDeleteModal" 
                  class="flex-1 px-4 py-2 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300 transition duration-200">
            Cancel
          </button>
          <%= link_to settings_configuration_path(@configuration), 
              method: :delete,
              data: { turbo_method: :delete },
              class: "flex-1 px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 text-center transition duration-200" do %>
            Delete Configuration
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div>
    <div data-configuration-show-target="toast"
         class="hidden fixed bottom-4 right-4 bg-green-500 text-white px-4 py-2 rounded shadow-lg transition-opacity duration-500">
      âœ… Copied Successfully!
    </div>
  </div>
</div>
