<% content_for :title, "Blockings Management" %>

<div class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-100">
  <div class="sticky top-0 z-40 backdrop-blur-lg bg-white/80 border-b border-slate-200/60">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between space-y-4 lg:space-y-0">
        <div class="flex items-center space-x-4">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-gradient-to-r from-red-500 to-pink-500 rounded-xl flex items-center justify-center shadow-lg transform rotate-3 hover:rotate-6 transition-transform duration-300">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728L5.636 5.636m12.728 12.728L18.364 5.636M5.636 18.364l12.728-12.728"></path>
              </svg>
            </div>
          </div>
          <div>
            <h1 class="text-2xl lg:text-3xl font-bold bg-gradient-to-r from-slate-800 via-slate-700 to-slate-600 bg-clip-text text-transparent">
              Blockings Management
            </h1>
            <p class="text-slate-600 mt-1">Manage unit blockings and restrictions</p>
          </div>
          <div class="hidden sm:flex items-center space-x-3">
            <div class="bg-white/70 backdrop-blur-sm rounded-lg px-3 py-2 border border-slate-200/60">
              <div class="text-xs text-slate-500 uppercase tracking-wide">Total</div>
              <div class="text-lg font-semibold text-slate-800"><%= @blockings.total_count rescue @blockings.count %></div>
            </div>
          </div>
        </div>

        <div class="flex items-center space-x-3">
          <%= link_to new_settings_blocking_path, 
              class: "group relative overflow-hidden bg-gradient-to-r from-indigo-500 to-purple-600 text-white px-6 py-3 rounded-xl font-semibold shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-300",
              data: { controller: "button-ripple" } do %>
            <span class="relative z-10 flex items-center space-x-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
              <span>New Blocking</span>
            </span>
            <div class="absolute inset-0 bg-gradient-to-r from-purple-600 to-indigo-600 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-left"></div>
          <% end %>
          <%= render 'layouts/advanced_search', klass: 'Blocking' %>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <% if @blockings.any? %>
      <div class="hidden lg:block">
        <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl border border-slate-200/60 overflow-hidden">
          <div class="overflow-x-auto">
            <table class="w-full">
              <thead>
                <tr class="bg-gradient-to-r from-slate-50 to-slate-100 border-b border-slate-200">
                  <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Code</th>
                  <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Project</th>
                  <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Flat</th>
                  <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Date</th>
                  <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Blocked Until</th>
                  <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Blocked By</th>
                  <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Status</th>
                  <th class="px-6 py-4 text-center text-xs font-semibold text-slate-600 uppercase tracking-wider">Actions</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-slate-100">
                <% @blockings.each_with_index do |blocking, index| %>
                  <tr class="group hover:bg-gradient-to-r hover:from-indigo-50 hover:to-purple-50 transition-all duration-300"
                      data-controller="table-row"
                      style="animation-delay: <%= index * 100 %>ms">
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="flex items-center">
                        <div class="flex-shrink-0 w-10 h-10 bg-gradient-to-r from-red-400 to-pink-500 rounded-lg flex items-center justify-center text-white font-semibold text-sm shadow-md">
                          <%= blocking.code&.last(3) || "BLK" %>
                        </div>
                        <div class="ml-3">
                          <div class="text-sm font-medium text-slate-900"><%= blocking.code %></div>
                        </div>
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="text-sm font-medium text-slate-900"><%= blocking.project.name %></div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="text-sm text-slate-900">
                        <%= blocking.flat.building.name if blocking.flat.building %>
                        <span class="text-slate-500">- <%= blocking.flat.name %></span>
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-900">
                      <%= blocking.date&.strftime("%d %b %Y") %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <% if blocking.blocked_upto %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= blocking.blocked_upto > Date.current ? 'bg-red-100 text-red-800' : 'bg-green-100 text-green-800' %>">
                          <%= blocking.blocked_upto.strftime("%d %b %Y") %>
                        </span>
                      <% else %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                          Indefinite
                        </span>
                      <% end %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-900">
                      <%= blocking.blocked_by.name %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <% if blocking.blocked_upto && blocking.blocked_upto <= Date.current %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                          <div class="w-1.5 h-1.5 bg-green-500 rounded-full mr-1.5 animate-pulse"></div>
                          Expired
                        </span>
                      <% else %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                          <div class="w-1.5 h-1.5 bg-red-500 rounded-full mr-1.5 animate-pulse"></div>
                          Active
                        </span>
                      <% end %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium">
                      <div class="flex items-center justify-center space-x-2">
                        <%= link_to settings_blocking_path(blocking),
                            class: "group inline-flex items-center justify-center w-8 h-8 rounded-lg bg-indigo-100 text-indigo-600 hover:bg-indigo-200 transition-colors duration-200" do %>
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                          </svg>
                        <% end %>
                        <%= link_to edit_settings_blocking_path(blocking),
                            class: "group inline-flex items-center justify-center w-8 h-8 rounded-lg bg-amber-100 text-amber-600 hover:bg-amber-200 transition-colors duration-200" do %>
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                          </svg>
                        <% end %>
                        <%= link_to settings_blocking_path(blocking),
                            method: :delete,
                            data: { 
                              controller: "confirmation",
                              confirmation_message: "Are you sure you want to delete this blocking?",
                              turbo_method: :delete
                            },
                            class: "group inline-flex items-center justify-center w-8 h-8 rounded-lg bg-red-100 text-red-600 hover:bg-red-200 transition-colors duration-200" do %>
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                          </svg>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <% if respond_to?(:paginate) && @blockings.respond_to?(:total_pages) %>
        <div class="flex justify-center mt-8">
          <%= paginate @blockings, theme: 'twitter_bootstrap_4' %>
        </div>
      <% end %>

    <% else %>
      <div class="text-center py-16">
        <div class="max-w-sm mx-auto">
          <div class="mb-8">
            <div class="w-20 h-20 bg-gradient-to-r from-red-400 to-pink-500 rounded-2xl mx-auto flex items-center justify-center shadow-xl">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728L5.636 5.636m12.728 12.728L18.364 5.636M5.636 18.364l12.728-12.728"></path>
              </svg>
            </div>
          </div>
          <h3 class="text-lg font-medium text-slate-900 mb-2">No blockings found</h3>
          <p class="text-slate-500 mb-8">Get started by creating your first unit blocking.</p>
          <%= link_to new_settings_blocking_path,
              class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-indigo-500 to-purple-600 text-white font-semibold rounded-xl shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-300" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Create First Blocking
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<style>
  @keyframes slideInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  [data-controller="table-row"], [data-controller="mobile-card"] {
    animation: slideInUp 0.6s ease-out forwards;
  }
</style>
