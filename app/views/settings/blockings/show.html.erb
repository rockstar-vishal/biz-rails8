<% content_for :title, "Blocking Details" %>

<div class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-100">
  <div class="sticky top-0 z-40 backdrop-blur-lg bg-white/80 border-b border-slate-200/60">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between space-y-4 lg:space-y-0">
        <div class="flex items-center space-x-4">
          <%= link_to settings_blockings_path, 
              class: "group flex items-center justify-center w-10 h-10 rounded-xl bg-slate-100 hover:bg-slate-200 transition-colors duration-200" do %>
            <svg class="w-5 h-5 text-slate-600 group-hover:text-slate-800 transition-colors duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
          <% end %>
          
          <div class="flex items-center space-x-3">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-gradient-to-r from-indigo-500 to-purple-500 rounded-xl flex items-center justify-center shadow-lg transform rotate-3 hover:rotate-6 transition-transform duration-300">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                </svg>
              </div>
            </div>
            <div>
              <h1 class="text-2xl font-bold bg-gradient-to-r from-slate-800 via-slate-700 to-slate-600 bg-clip-text text-transparent">
                Blocking Details
              </h1>
              <p class="text-slate-600">Complete information about blocking <span class="font-medium text-indigo-600"><%= @blocking.code %></span></p>
            </div>
          </div>
        </div>

        <div class="flex items-center space-x-3">
          <%= link_to edit_settings_blocking_path(@blocking), 
              class: "group relative overflow-hidden bg-gradient-to-r from-amber-500 to-orange-600 text-white px-6 py-3 rounded-xl font-semibold shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-300" do %>
            <span class="relative z-10 flex items-center space-x-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
              <span>Edit Blocking</span>
            </span>
            <div class="absolute inset-0 bg-gradient-to-r from-orange-600 to-amber-600 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-left"></div>
          <% end %>

          <%= link_to settings_blocking_path(@blocking), 
              method: :delete,
              data: { 
                controller: "confirmation",
                confirmation_message: "Are you sure you want to delete this blocking? This action cannot be undone.",
                turbo_method: :delete
              },
              class: "group relative overflow-hidden bg-gradient-to-r from-red-500 to-pink-600 text-white px-6 py-3 rounded-xl font-semibold shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-300" do %>
            <span class="relative z-10 flex items-center space-x-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
              <span>Delete</span>
            </span>
            <div class="absolute inset-0 bg-gradient-to-r from-pink-600 to-red-600 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-left"></div>
          <% end %>
        </div>
      </div>

      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 mt-6">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-3 sm:space-y-0">
          <div class="flex items-center space-x-4">
            <% if @blocking.blocked_upto && @blocking.blocked_upto <= Date.current %>
              <span class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-medium bg-green-100 text-green-800 shadow-sm">
                <div class="w-2 h-2 bg-green-500 rounded-full mr-2 animate-pulse"></div>
                Blocking Expired
              </span>
            <% else %>
              <span class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-medium bg-red-100 text-red-800 shadow-sm">
                <div class="w-2 h-2 bg-red-500 rounded-full mr-2 animate-pulse"></div>
                Active Blocking
              </span>
            <% end %>

            <div class="hidden md:flex items-center space-x-6 text-sm text-slate-600">
              <div class="flex items-center space-x-2">
                <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a1 1 0 011-1h6a1 1 0 011 1v4m-6 0v1m0-1h6v1m-6 0H6a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V9a2 2 0 00-2-2h-2"></span>
                </svg>
                <span>Created <%= time_ago_in_words(@blocking.created_at) %> ago</span>
              </div>
              <div class="flex items-center space-x-2">
                <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span>Last updated <%= time_ago_in_words(@blocking.updated_at) %> ago</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <div class="lg:col-span-2 space-y-8">
        <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl border border-slate-200/60 overflow-hidden">
          <div class="bg-gradient-to-r from-slate-50 to-slate-100 px-6 py-4 border-b border-slate-200">
            <h2 class="text-xl font-semibold text-slate-800 flex items-center space-x-2">
              <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span>Blocking Information</span>
            </h2>
          </div>
          
          <div class="p-6 space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div class="space-y-4">
                <div class="flex items-center justify-between py-3 border-b border-slate-100">
                  <span class="text-sm font-medium text-slate-600">Blocking Code</span>
                  <div class="flex items-center space-x-2">
                    <div class="w-6 h-6 bg-gradient-to-r from-red-400 to-pink-500 rounded-lg flex items-center justify-center text-white font-semibold text-xs">
                      <%= @blocking.code&.last(3) || "BLK" %>
                    </div>
                    <span class="font-mono text-slate-900"><%= @blocking.code %></span>
                  </div>
                </div>

                <div class="flex items-center justify-between py-3 border-b border-slate-100">
                  <span class="text-sm font-medium text-slate-600">Project</span>
                  <span class="text-slate-900 font-medium"><%= @blocking.project.name %></span>
                </div>

                <div class="flex items-center justify-between py-3 border-b border-slate-100">
                  <span class="text-sm font-medium text-slate-600">Building</span>
                  <span class="text-slate-900"><%= @blocking.flat.building&.name || "N/A" %></span>
                </div>

                <div class="flex items-center justify-between py-3 border-b border-slate-100">
                  <span class="text-sm font-medium text-slate-600">Flat/Unit</span>
                  <span class="text-slate-900 font-medium"><%= @blocking.flat.name %></span>
                </div>
              </div>

              <div class="space-y-4">
                <div class="flex items-center justify-between py-3 border-b border-slate-100">
                  <span class="text-sm font-medium text-slate-600">Blocking Date</span>
                  <div class="text-right">
                    <div class="text-slate-900 font-medium"><%= @blocking.date&.strftime("%d %B %Y") %></div>
                    <div class="text-xs text-slate-500"><%= @blocking.date&.strftime("%A") %></div>
                  </div>
                </div>

                <div class="flex items-center justify-between py-3 border-b border-slate-100">
                  <span class="text-sm font-medium text-slate-600">Blocked Until</span>
                  <div class="text-right">
                    <% if @blocking.blocked_upto %>
                      <div class="text-slate-900 font-medium"><%= @blocking.blocked_upto.strftime("%d %B %Y") %></div>
                      <div class="text-xs <%= @blocking.blocked_upto <= Date.current ? 'text-green-600' : 'text-red-600' %>">
                        <%= @blocking.blocked_upto <= Date.current ? 'Expired' : "#{distance_of_time_in_words(Date.current, @blocking.blocked_upto)} remaining" %>
                      </div>
                    <% else %>
                      <div class="text-slate-900 font-medium">Indefinite</div>
                      <div class="text-xs text-amber-600">No end date set</div>
                    <% end %>
                  </div>
                </div>

                <div class="flex items-center justify-between py-3 border-b border-slate-100">
                  <span class="text-sm font-medium text-slate-600">Blocked By</span>
                  <div class="text-right">
                    <div class="text-slate-900 font-medium"><%= @blocking.blocked_by.name %></div>
                    <div class="text-xs text-slate-500"><%= @blocking.blocked_by.role.name if @blocking.blocked_by.role %></div>
                  </div>
                </div>

                <div class="flex items-center justify-between py-3">
                  <span class="text-sm font-medium text-slate-600">Duration</span>
                  <div class="text-right">
                    <% if @blocking.blocked_upto %>
                      <div class="text-slate-900 font-medium">
                        <%= distance_of_time_in_words(@blocking.date, @blocking.blocked_upto) %>
                      </div>
                      <div class="text-xs text-slate-500">
                        <%= (@blocking.blocked_upto - @blocking.date).to_i %> days total
                      </div>
                    <% else %>
                      <div class="text-slate-900 font-medium">Ongoing</div>
                      <div class="text-xs text-slate-500">
                        <%= distance_of_time_in_words(@blocking.date, Date.current) %> so far
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <% if @blocking.comment.present? %>
          <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl border border-slate-200/60 overflow-hidden">
            <div class="bg-gradient-to-r from-slate-50 to-slate-100 px-6 py-4 border-b border-slate-200">
              <h2 class="text-xl font-semibold text-slate-800 flex items-center space-x-2">
                <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
                </svg>
                <span>Comments & Notes</span>
              </h2>
            </div>
            
            <div class="p-6">
              <div class="bg-gradient-to-r from-blue-50 to-indigo-50 rounded-xl p-4 border border-blue-100">
                <div class="flex items-start space-x-3">
                  <div class="flex-shrink-0">
                    <div class="w-8 h-8 bg-gradient-to-r from-indigo-500 to-purple-500 rounded-full flex items-center justify-center">
                      <span class="text-white text-sm font-semibold"><%= @blocking.blocked_by.name.first %></span>
                    </div>
                  </div>
                  <div class="flex-1">
                    <div class="text-sm font-medium text-slate-700 mb-1"><%= @blocking.blocked_by.name %></div>
                    <p class="text-slate-600 leading-relaxed"><%= simple_format(@blocking.comment) %></p>
                    <div class="text-xs text-slate-500 mt-2">
                      Added on <%= @blocking.created_at.strftime("%d %B %Y at %I:%M %p") %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="space-y-8">
        <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl border border-slate-200/60 overflow-hidden">
          <div class="bg-gradient-to-r from-slate-50 to-slate-100 px-6 py-4 border-b border-slate-200">
            <h3 class="text-lg font-semibold text-slate-800">Quick Stats</h3>
          </div>
          
          <div class="p-6 space-y-4">
            <div class="flex items-center justify-between p-3 bg-gradient-to-r from-red-50 to-pink-50 rounded-lg border border-red-100">
              <div class="flex items-center space-x-2">
                <div class="w-8 h-8 bg-red-500 rounded-lg flex items-center justify-center">
                  <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a1 1 0 011-1h6a1 1 0 011 1v4m-6 0v1m0-1h6v1m-6 0H6a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V9a2 2 0 00-2-2h-2"></path>
                  </svg>
                </div>
                <span class="text-sm font-medium text-slate-700">Days Active</span>
              </div>
              <div class="text-right">
                <div class="text-lg font-bold text-red-600">
                  <%= (Date.current - @blocking.date).to_i %>
                </div>
                <div class="text-xs text-slate-500">days</div>
              </div>
            </div>

            <% if @blocking.blocked_upto %>
              <div class="flex items-center justify-between p-3 bg-gradient-to-r from-blue-50 to-indigo-50 rounded-lg border border-blue-100">
                <div class="flex items-center space-x-2">
                  <div class="w-8 h-8 bg-blue-500 rounded-lg flex items-center justify-center">
                    <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  </div>
                  <span class="text-sm font-medium text-slate-700">Days Remaining</span>
                </div>
                <div class="text-right">
                  <div class="text-lg font-bold text-blue-600">
                    <%= [@blocking.blocked_upto - Date.current, 0].max.to_i %>
                  </div>
                  <div class="text-xs text-slate-500">days</div>
                </div>
              </div>
            <% end %>

            <div class="flex items-center justify-between p-3 bg-gradient-to-r from-amber-50 to-orange-50 rounded-lg border border-amber-100">
              <div class="flex items-center space-x-2">
                <div class="w-8 h-8 bg-amber-500 rounded-lg flex items-center justify-center">
                  <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                  </svg>
                </div>
                <span class="text-sm font-medium text-slate-700">Building</span>
              </div>
              <div class="text-right">
                <div class="text-sm font-medium text-amber-700">
                  <%= @blocking.flat.building&.name || "N/A" %>
                </div>
                <div class="text-xs text-slate-500">building</div>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl border border-slate-200/60 overflow-hidden">
          <div class="bg-gradient-to-r from-slate-50 to-slate-100 px-6 py-4 border-b border-slate-200">
            <h3 class="text-lg font-semibold text-slate-800">Flat Information</h3>
          </div>
          
          <div class="p-6 space-y-4">
            <div class="flex items-center justify-between py-2 border-b border-slate-100">
              <span class="text-sm text-slate-600">Flat Name</span>
              <span class="font-medium text-slate-900"><%= @blocking.flat.name %></span>
            </div>
            
            <div class="flex items-center justify-between py-2 border-b border-slate-100">
              <span class="text-sm text-slate-600">Configuration</span>
              <span class="font-medium text-slate-900">
                <%= @blocking.flat.config.name if @blocking.flat.config %>
              </span>
            </div>
            
            <div class="flex items-center justify-between py-2 border-b border-slate-100">
              <span class="text-sm text-slate-600">Floor</span>
              <span class="font-medium text-slate-900">
                <%= @blocking.flat.floor.name if @blocking.flat.floor %>
              </span>
            </div>
            
            <div class="flex items-center justify-between py-2 border-b border-slate-100">
              <span class="text-sm text-slate-600">Carpet Area</span>
              <span class="font-medium text-slate-900">
                <%= @blocking.flat.carpet_area %> sq ft
              </span>
            </div>
            
            <div class="flex items-center justify-between py-2 border-b border-slate-100">
              <span class="text-sm text-slate-600">Facing</span>
              <span class="font-medium text-slate-900">
                <%= @blocking.flat.facing || 'N/A' %>
              </span>
            </div>
            
            <div class="flex items-center justify-between py-2">
              <span class="text-sm text-slate-600">Current Status</span>
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-slate-100 text-slate-800">
                <%= @blocking.flat.status.name if @blocking.flat.status %>
              </span>
            </div>
          </div>
        </div>

        <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl border border-slate-200/60 overflow-hidden">
          <div class="bg-gradient-to-r from-slate-50 to-slate-100 px-6 py-4 border-b border-slate-200">
            <h3 class="text-lg font-semibold text-slate-800">Quick Actions</h3>
          </div>
          
          <div class="p-6 space-y-3">
            <%= link_to edit_settings_blocking_path(@blocking),
                class: "w-full flex items-center justify-center px-4 py-3 bg-gradient-to-r from-amber-500 to-orange-500 text-white font-medium rounded-xl hover:from-orange-500 hover:to-amber-500 transform hover:-translate-y-0.5 transition-all duration-300 shadow-lg hover:shadow-xl" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
              Edit Blocking
            <% end %>

            <%= link_to settings_blockings_path(project_id: @blocking.project_id),
                class: "w-full flex items-center justify-center px-4 py-3 bg-gradient-to-r from-indigo-500 to-purple-500 text-white font-medium rounded-xl hover:from-purple-500 hover:to-indigo-500 transform hover:-translate-y-0.5 transition-all duration-300 shadow-lg hover:shadow-xl" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
              View Project Blockings
            <% end %>

            <div class="pt-3 border-t border-slate-200">
              <%= link_to settings_blocking_path(@blocking),
                  method: :delete,
                  data: { 
                    controller: "confirmation",
                    confirmation_message: "Are you sure you want to delete this blocking? This action cannot be undone.",
                    turbo_method: :delete
                  },
                  class: "w-full flex items-center justify-center px-4 py-3 bg-gradient-to-r from-red-500 to-pink-500 text-white font-medium rounded-xl hover:from-pink-500 hover:to-red-500 transform hover:-translate-y-0.5 transition-all duration-300 shadow-lg hover:shadow-xl" do %>
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
                Delete Blocking
              <% end %>
            </div>
          </div>
        </div>

        <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl border border-slate-200/60 overflow-hidden">
          <div class="bg-gradient-to-r from-slate-50 to-slate-100 px-6 py-4 border-b border-slate-200">
            <h3 class="text-lg font-semibold text-slate-800">Timeline</h3>
          </div>
          
          <div class="p-6">
            <div class="space-y-4">
              <div class="flex items-start space-x-3">
                <div class="flex-shrink-0 w-8 h-8 bg-green-500 rounded-full flex items-center justify-center">
                  <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                  </svg>
                </div>
                <div class="flex-1">
                  <div class="text-sm font-medium text-slate-900">Blocking Created</div>
                  <div class="text-xs text-slate-500">
                    <%= @blocking.created_at.strftime("%d %B %Y at %I:%M %p") %>
                  </div>
                  <div class="text-xs text-slate-500 mt-1">by <%= @blocking.blocked_by.name %></div>
                </div>
              </div>

              <% if @blocking.updated_at != @blocking.created_at %>
                <div class="flex items-start space-x-3">
                  <div class="flex-shrink-0 w-8 h-8 bg-amber-500 rounded-full flex items-center justify-center">
                    <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                  </div>
                  <div class="flex-1">
                    <div class="text-sm font-medium text-slate-900">Last Modified</div>
                    <div class="text-xs text-slate-500">
                      <%= @blocking.updated_at.strftime("%d %B %Y at %I:%M %p") %>
                    </div>
                  </div>
                </div>
              <% end %>

              <% if @blocking.blocked_upto && @blocking.blocked_upto <= Date.current %>
                <div class="flex items-start space-x-3">
                  <div class="flex-shrink-0 w-8 h-8 bg-red-500 rounded-full flex items-center justify-center">
                    <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  </div>
                  <div class="flex-1">
                    <div class="text-sm font-medium text-slate-900">Blocking Expired</div>
                    <div class="text-xs text-slate-500">
                      <%= @blocking.blocked_upto.strftime("%d %B %Y") %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
