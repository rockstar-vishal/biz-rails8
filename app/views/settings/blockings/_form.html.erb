<%= form_with model: [:settings, blocking], local: true, 
    class: "space-y-8", 
    data: { 
      controller: "blocking-form", 
      blocking_form_projects_url_value: settings_blockings_path,
      turbo: false 
    } do |form| %>

  <% if blocking.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-xl p-4 animate-shake" 
         data-controller="alert" 
         data-alert-auto_dismiss_value="false">
      <div class="flex items-start space-x-3">
        <div class="flex-shrink-0">
          <svg class="w-5 h-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div>
          <h3 class="text-sm font-medium text-red-800">
            Please fix the following <%= pluralize(blocking.errors.count, "error") %>:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc space-y-1 pl-5">
              <% blocking.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
        <div class="flex-shrink-0">
          <button type="button" 
                  class="text-red-400 hover:text-red-600 transition-colors duration-200" 
                  data-action="click->alert#dismiss">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
      </div>
    </div>
  <% end %>

  <div class="bg-gradient-to-r from-slate-50 to-slate-100 rounded-xl p-6 border border-slate-200">
    <div class="flex items-center space-x-3 mb-6">
      <div class="flex-shrink-0">
        <div class="w-10 h-10 bg-gradient-to-r from-indigo-500 to-purple-500 rounded-xl flex items-center justify-center shadow-lg">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>
      <div>
        <h3 class="text-lg font-semibold text-slate-800">Blocking Details</h3>
        <p class="text-sm text-slate-600">Configure the blocking parameters</p>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="space-y-2" data-controller="field-animation">
        <%= form.label :project_id, class: "block text-sm font-semibold text-slate-700 mb-2" do %>
          Project <span class="text-red-500">*</span>
        <% end %>
        
        <div class="relative">
          <%= form.select :project_id, 
              options_from_collection_for_select(@projects, :id, :name, blocking.project_id),
              { prompt: "Choose a project..." },
              { 
                class: "w-full bg-white border border-slate-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-300 shadow-sm hover:shadow-md #{blocking.errors[:project_id].any? ? 'border-red-300 focus:ring-red-500' : ''}",
                data: { 
                  action: "change->blocking-form#projectChanged",
                  blocking_form_target: "projectSelect"
                }
              } %>
          
          <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
            <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
        </div>
        
        <% if blocking.errors[:project_id].any? %>
          <p class="text-sm text-red-600 mt-1 flex items-center space-x-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span><%= blocking.errors[:project_id].first %></span>
          </p>
        <% end %>
      </div>

      <div class="space-y-2" data-controller="field-animation">
        <%= form.label :flat_id, class: "block text-sm font-semibold text-slate-700 mb-2" do %>
          Flat/Unit <span class="text-red-500">*</span>
        <% end %>
        
        <div class="relative">
          <%= form.select :flat_id, 
              options_from_collection_for_select(@flats, :id, :name, blocking.flat_id),
              { prompt: "Choose a flat/unit..." },
              { 
                class: "w-full bg-white border border-slate-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-300 shadow-sm hover:shadow-md #{blocking.errors[:flat_id].any? ? 'border-red-300 focus:ring-red-500' : ''}",
                data: { 
                  blocking_form_target: "flatSelect"
                }
              } %>
          
          <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
            <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a3 3 0 00-3-3H6a3 3 0 00-3 2z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V5a2 2 0 012-2h4a2 2 0 012 2v2m-6 4h6"></path>
            </svg>
          </div>
        </div>
        
        <% if blocking.errors[:flat_id].any? %>
          <p class="text-sm text-red-600 mt-1 flex items-center space-x-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span><%= blocking.errors[:flat_id].first %></span>
          </p>
        <% end %>
        
        <div class="hidden" data-blocking-form-target="flatLoading">
          <div class="flex items-center space-x-2 text-sm text-indigo-600">
            <svg class="animate-spin w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
            </svg>
            <span>Loading flats...</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="bg-gradient-to-r from-amber-50 to-orange-50 rounded-xl p-6 border border-amber-200">
    <div class="flex items-center space-x-3 mb-6">
      <div class="flex-shrink-0">
        <div class="w-10 h-10 bg-gradient-to-r from-amber-500 to-orange-500 rounded-xl flex items-center justify-center shadow-lg">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a1 1 0 011-1h6a1 1 0 011 1v4m-6 0v1m0-1h6v1m-6 0H6a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V9a2 2 0 00-2-2h-2"></path>
          </svg>
        </div>
      </div>
      <div>
        <h3 class="text-lg font-semibold text-slate-800">Blocking Period</h3>
        <p class="text-sm text-slate-600">Set the blocking start date and duration</p>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="space-y-2" data-controller="field-animation">
        <%= form.label :date, class: "block text-sm font-semibold text-slate-700 mb-2" do %>
          Blocking Date <span class="text-red-500">*</span>
        <% end %>
        
        <div class="relative">
          <%= form.date_field :date, 
              value: blocking.date&.strftime("%Y-%m-%d"),
              class: "w-full bg-white border border-slate-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-300 shadow-sm hover:shadow-md #{blocking.errors[:date].any? ? 'border-red-300 focus:ring-red-500' : ''}" %>
          
          <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
            <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a1 1 0 011-1h6a1 1 0 011 1v4m-6 0v1m0-1h6v1m-6 0H6a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V9a2 2 0 00-2-2h-2"></path>
            </svg>
          </div>
        </div>
        
        <% if blocking.errors[:date].any? %>
          <p class="text-sm text-red-600 mt-1 flex items-center space-x-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span><%= blocking.errors[:date].first %></span>
          </p>
        <% end %>
      </div>

      <div class="space-y-2" data-controller="field-animation">
        <%= form.label :blocked_upto, class: "block text-sm font-semibold text-slate-700 mb-2" do %>
          Blocked Until<span class="text-red-500">*</span>
        <% end %>
        
        <div class="relative">
          <%= form.date_field :blocked_upto, 
              value: blocking.blocked_upto&.strftime("%Y-%m-%d"),
              class: "w-full bg-white border border-slate-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-300 shadow-sm hover:shadow-md #{blocking.errors[:blocked_upto].any? ? 'border-red-300 focus:ring-red-500' : ''}" %>
          
          <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
            <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>
        
        <% if blocking.errors[:blocked_upto].any? %>
          <p class="text-sm text-red-600 mt-1 flex items-center space-x-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span><%= blocking.errors[:blocked_upto].first %></span>
          </p>
        <% end %>
      </div>
    </div>
  </div>

  <div class="bg-gradient-to-r from-blue-50 to-indigo-50 rounded-xl p-6 border border-blue-200">
    <div class="flex items-center space-x-3 mb-6">
      <div class="flex-shrink-0">
        <div class="w-10 h-10 bg-gradient-to-r from-blue-500 to-indigo-500 rounded-xl flex items-center justify-center shadow-lg">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
          </svg>
        </div>
      </div>
      <div>
        <h3 class="text-lg font-semibold text-slate-800">Additional Information</h3>
        <p class="text-sm text-slate-600">Add notes or comments about this blocking</p>
      </div>
    </div>

    <div class="space-y-2" data-controller="field-animation">
      <%= form.label :comment, class: "block text-sm font-semibold text-slate-700 mb-2" do %>
        Comments <span class="text-slate-500">(Optional)</span>
      <% end %>
      
      <div class="relative">
        <%= form.text_area :comment, 
            rows: 4,
            placeholder: "Enter any additional notes or reason for blocking...",
            class: "w-full bg-white border border-slate-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-300 shadow-sm hover:shadow-md resize-none #{blocking.errors[:comment].any? ? 'border-red-300 focus:ring-red-500' : ''}" %>
        
        <div class="absolute bottom-3 right-3 pointer-events-none">
          <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
        </div>
      </div>
      
      <% if blocking.errors[:comment].any? %>
        <p class="text-sm text-red-600 mt-1 flex items-center space-x-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span><%= blocking.errors[:comment].first %></span>
        </p>
      <% end %>
    </div>
  </div>

  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-4 sm:space-y-0 pt-6 border-t border-slate-200">
    <div class="flex items-center space-x-2 text-sm text-slate-500">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <span>All changes will be saved automatically</span>
    </div>

    <div class="flex items-center space-x-3">
      <%= link_to settings_blockings_path, 
          class: "inline-flex items-center px-6 py-3 border border-slate-300 shadow-sm text-base font-medium rounded-xl text-slate-700 bg-white hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
        Cancel
      <% end %>

      <%= form.submit blocking.persisted? ? "Update Blocking" : "Create Blocking", 
          class: "group relative overflow-hidden inline-flex items-center px-8 py-3 border border-transparent text-base font-medium rounded-xl text-white bg-gradient-to-r from-indigo-500 to-purple-600 hover:from-purple-600 hover:to-indigo-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-300",
          data: { 
            blocking_form_target: "submitButton",
            disable_with: "Processing..."
          } do %>
        <span class="relative z-10 flex items-center space-x-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <span><%= blocking.persisted? ? "Update Blocking" : "Create Blocking" %></span>
        </span>
        <div class="absolute inset-0 bg-gradient-to-r from-purple-600 to-indigo-600 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-left"></div>
      <% end %>
    </div>
  </div>
<% end %>
