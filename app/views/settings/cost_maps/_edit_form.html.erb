<%= form_with model: [:settings, cost_map], method: :put, data: { turbo: true } do |form| %>
  <% if cost_map&.errors&.any? %>
    <div class="rounded-md bg-red-50 p-4 border border-red-200">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside space-y-1">
              <% cost_map.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  
  <span class="mb-4 block text-xs">Edit Cost Map</span>
  
  <div class="rounded-lg p-4 shadow-xl bg-white">
    <div class="pt-0 grid gap-1 grid-cols-1">
      <div class="mb-4">
        <%= form.label :title, "Cost Map Title", class: "mb-2 block text-sm font-medium text-gray-700" %>
        <%= form.text_field :title, 
              class: "w-full rounded border-gray-300 p-3 text-sm focus:border-brand focus:ring-brand focus:ring-2 focus:ring-opacity-50 focus:outline-none h-auto p-3", 
              value: cost_map.title, 
              required: true %>
      </div>
      <div class="mb-4">
        <%= form.label :cost_type_id, "Cost Type", class: "mb-2 block text-sm font-medium text-gray-700" %>
        <%= form.collection_select :cost_type_id, CostType.all, :id, :name, 
              { selected: cost_map.cost_type_id, prompt: "Select Cost Type" }, 
              { class: "w-full rounded border-gray-300 p-3 text-sm focus:border-brand focus:ring-brand focus:ring-2 focus:ring-opacity-50 focus:outline-none h-auto p-3", required: true } %>
      </div>
    </div>
    
    <div class="border-t border-gray-200 pt-4">
      <%= form.submit 'Update Cost Map', 
            class: "w-full bg-brand text-white hover:bg-brand/80 h-auto rounded-md text-sm py-2 px-4 cursor-pointer" %>
    </div>
  </div>
<% end %>
