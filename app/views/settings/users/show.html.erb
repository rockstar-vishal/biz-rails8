<div class="min-h-screen bg-gray-50">
  <div class="bg-white shadow-sm border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <h1 class="text-2xl font-bold text-gray-900">User Profile</h1>
        </div>
        <div class="flex items-center space-x-3">
          <%= render 'layouts/action_buttons', 
            record: @user, 
            module_name: 'settings_user',
            edit_path: 'edit_settings_user',
            sheet: true
          %>
          <%= link_to 'Back to Users', settings_users_path, class: 'px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors' %>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <div class="lg:col-span-1">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
          <div class="bg-gradient-to-r from-blue-600 to-purple-600 p-6 text-white">
            <div class="flex items-center space-x-4">
              <div class="w-20 h-20 bg-white/20 rounded-full flex items-center justify-center text-2xl font-bold">
                <%= @user.name.split.map(&:first).join.upcase %>
              </div>
              <div>
                <h2 class="text-xl font-semibold"><%= @user.name %></h2>
                <p class="text-blue-100 opacity-90"><%= @user.role.name %></p>
              </div>
            </div>
          </div>

          <div class="p-6">
            <div class="space-y-4">
              <div class="flex items-center space-x-3 text-gray-600">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
                <span><%= @user.email %></span>
              </div>

              <div class="flex items-center space-x-3 text-gray-600">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
                <span><%= @user.phone || 'Not provided' %></span>
              </div>

              <div class="flex items-center space-x-3 text-gray-600">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
                <span>Employee #<%= @user.employee_no || 'N/A' %></span>
              </div>

              <div class="flex items-center space-x-3 text-gray-600">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-4m-4 0H9m4 0V9a2 2 0 00-2-2H9a2 2 0 00-2 2v12m4 0V9"/>
                </svg>
                <span><%= @user.company.name %></span>
              </div>
            </div>

            <div class="mt-6">
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium 
                <%= @user.role.tag == 'sysad' ? 'bg-purple-100 text-purple-800' : 
                    @user.role.tag == 'admin' ? 'bg-red-100 text-red-800' :
                    @user.role.tag == 'manager' ? 'bg-blue-100 text-blue-800' :
                    'bg-green-100 text-green-800' %>">
                <%= @user.role.name %>
              </span>
            </div>
          </div>
        </div>

        <div class="mt-6 bg-white rounded-xl shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Account Stats</h3>
          <div class="grid grid-cols-2 gap-4">
            <div class="text-center">
              <div class="text-2xl font-bold text-blue-600"><%= @projects.count %></div>
              <div class="text-sm text-gray-600">Projects</div>
            </div>
            <div class="text-center">
              <div class="text-2xl font-bold text-green-600">45</div>
              <div class="text-sm text-gray-600">Leads</div>
            </div>
            <div class="text-center">
              <div class="text-2xl font-bold text-purple-600">8</div>
              <div class="text-sm text-gray-600">Deals</div>
            </div>
            <div class="text-center">
              <div class="text-2xl font-bold text-orange-600">92%</div>
              <div class="text-sm text-gray-600">Activity</div>
            </div>
          </div>
        </div>
      </div>

      <div class="lg:col-span-2">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
            <% if @projects.present? %>
              <% @projects.each do |project| %>
                <div class="flex items-center space-x-3 p-3 bg-gray-50 rounded-lg">
                  <div class="w-3 h-3 bg-blue-500 rounded-full"></div>
                  <span class="text-gray-700"><%= project.name %></span>
                </div>
              <% end %>
            <% else %>
              <p class="text-gray-500">No projects assigned</p>
            <% end %>
          </div>
        </div>

        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Recent Activity</h3>
          <div class="space-y-4">
            <div class="flex items-start space-x-3">
              <div class="w-2 h-2 bg-blue-500 rounded-full mt-2"></div>
              <div class="flex-1">
                <p class="text-gray-700">Created new lead for Ocean View Apartments</p>
                <p class="text-sm text-gray-500">2 hours ago</p>
              </div>
            </div>
            <div class="flex items-start space-x-3">
              <div class="w-2 h-2 bg-green-500 rounded-full mt-2"></div>
              <div class="flex-1">
                <p class="text-gray-700">Updated project status for Sky Tower</p>
                <p class="text-sm text-gray-500">1 day ago</p>
              </div>
            </div>
            <div class="flex items-start space-x-3">
              <div class="w-2 h-2 bg-purple-500 rounded-full mt-2"></div>
              <div class="flex-1">
                <p class="text-gray-700">Completed training module</p>
                <p class="text-sm text-gray-500">2 days ago</p>
              </div>
            </div>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">System Information</h3>
            <div class="space-y-2 text-sm">
              <div class="flex justify-between">
                <span class="text-gray-600">Member since</span>
                <span class="text-gray-900"><%= @user.created_at.strftime('%b %d, %Y') %></span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Last updated</span>
                <span class="text-gray-900"><%= @user.updated_at.strftime('%b %d, %Y') %></span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Role</span>
                <span class="text-green-600 font-medium"><%= @user.role.name %></span>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Quick Actions</h3>
            <div class="space-y-2">
              <button class="w-full text-left px-3 py-2 text-gray-700 hover:bg-gray-50 rounded-lg transition-colors">
                Send Message
              </button>
              <button class="w-full text-left px-3 py-2 text-gray-700 hover:bg-gray-50 rounded-lg transition-colors">
                View Reports
              </button>
              <button class="w-full text-left px-3 py-2 text-gray-700 hover:bg-gray-50 rounded-lg transition-colors">
                Export Data
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
