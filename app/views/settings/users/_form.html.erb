<% user ||= @user %>
<%= form_with model: [:settings, user], data: { turbo: true }, local: true do |form| %>
  <% if user.errors.any? %>
    <div class="rounded-md bg-red-50 p-4 border border-red-200">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside space-y-1">
              <% user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <div class="">
    <div class="p-4 flex items-center justify-between">
      <h3 class="text-base font-semibold"><%= (user || @user).new_record? ? 'Add User' : 'Edit User' %></h3>
    </div>
    <div class="modal-height p-4">
      <div class="grid grid-cols-1 sm:grid-cols-1 lg:grid-cols-2 gap-4">
        <div class="col-span-full flex items-center justify-between">
          <h3 class="text-base font-semibold">Basic Details</h3>
        </div>
        
        <div class="mb-4">
          <%= form.label :name, "Name", class: "mb-2 block text-sm font-medium text-gray-700" %>
          <%= form.text_field :name, class: "w-full rounded border-gray-300 p-3 text-sm focus:border-brand focus:ring-brand focus:ring-2 focus:ring-opacity-50 focus:outline-none", required: true %>
        </div>
        
        <div class="mb-4">
          <%= form.label :email, "Email", class: "mb-2 block text-sm font-medium text-gray-700" %>
          <%= form.email_field :email, class: "w-full rounded border-gray-300 p-3 text-sm focus:border-brand focus:ring-brand focus:ring-2 focus:ring-opacity-50 focus:outline-none", required: true %>
        </div>
        
        <div class="mb-4">
          <%= form.label :phone, "Mobile", class: "mb-2 block text-sm font-medium text-gray-700" %>
          <%= form.text_field :phone, class: "w-full rounded border-gray-300 p-3 text-sm focus:border-brand focus:ring-brand focus:ring-2 focus:ring-opacity-50 focus:outline-none" %>
        </div>
        
        <div class="mb-4">
          <%= form.label :employee_no, "Employee No", class: "mb-2 block text-sm font-medium text-gray-700" %>
          <%= form.text_field :employee_no, class: "w-full rounded border-gray-300 p-3 text-sm focus:border-brand focus:ring-brand focus:ring-2 focus:ring-opacity-50 focus:outline-none" %>
        </div>
        
        <div class="mb-4">
          <%= form.label :role_id, "Select Role", class: "mb-2 block text-sm font-medium text-gray-700" %>
          <%= form.select :role_id, options_from_collection_for_select(@roles, :id, :name, user.role_id), 
              { include_blank: "Please select" }, 
              { class: "w-full rounded border-gray-300 p-3 text-sm focus:border-brand focus:ring-brand focus:ring-2 focus:ring-opacity-50 focus:outline-none", required: true } %>
        </div>

        <div class="mb-4">
          <%= form.label :company_id, "Select Company", class: "mb-2 block text-sm font-medium text-gray-700" %>
          <%= form.select :company_id, options_from_collection_for_select(@companies, :id, :name, user.company_id), 
              { include_blank: "Please select" }, 
              { class: "w-full rounded border-gray-300 p-3 text-sm focus:border-brand focus:ring-brand focus:ring-2 focus:ring-opacity-50 focus:outline-none", required: true } %>
        </div>
        
        <% if user.new_record? %>
          <div class="col-span-full flex items-center justify-between mt-4">
            <h3 class="text-base font-semibold">Password</h3>
          </div>
          
          <div class="mb-4">
            <%= form.label :password, "Password", class: "mb-2 block text-sm font-medium text-gray-700" %>
            <%= form.password_field :password, class: "w-full rounded border-gray-300 p-3 text-sm focus:border-brand focus:ring-brand focus:ring-2 focus:ring-opacity-50 focus:outline-none", required: true %>
          </div>
          
          <div class="mb-4">
            <%= form.label :password_confirmation, "Confirm Password", class: "mb-2 block text-sm font-medium text-gray-700" %>
            <%= form.password_field :password_confirmation, class: "w-full rounded border-gray-300 p-3 text-sm focus:border-brand focus:ring-brand focus:ring-2 focus:ring-opacity-50 focus:outline-none", required: true %>
          </div>
        <% else %>
          <div class="col-span-full flex items-center justify-between mt-4">
            <h3 class="text-base font-semibold">Change Password (optional)</h3>
          </div>
          
          <div class="mb-4">
            <%= form.label :password, "New Password", class: "mb-2 block text-sm font-medium text-gray-700" %>
            <%= form.password_field :password, class: "w-full rounded border-gray-300 p-3 text-sm focus:border-brand focus:ring-brand focus:ring-2 focus:ring-opacity-50 focus:outline-none" %>
          </div>
          
          <div class="mb-4">
            <%= form.label :password_confirmation, "Confirm New Password", class: "mb-2 block text-sm font-medium text-gray-700" %>
            <%= form.password_field :password_confirmation, class: "w-full rounded border-gray-300 p-3 text-sm focus:border-brand focus:ring-brand focus:ring-2 focus:ring-opacity-50 focus:outline-none" %>
          </div>
        <% end %>
      </div>
    </div>
    
    <div class="bg-white border-t border-gray-300 p-4">
      <div class="flex justify-between items-center">
        <%= form.submit (user || @user).new_record? ? 'Create User' : 'Update User', 
              class: "bg-brand text-white hover:bg-brand/80 h-auto rounded-md text-sm py-2 px-4 cursor-pointer" %>
        <button type="button" data-ui--sheet-target="closeButton"
          class="bg-gray-200 text-gray-800 hover:bg-gray-300 h-auto rounded-md text-sm py-2 px-4">
          Close
        </button>
      </div>
    </div>
  </div>
<% end %>
